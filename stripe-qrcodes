
'use client';

import React, { useState, useEffect } from 'react';
import { 
  Shield, 
  Zap, 
  Coins, 
  Radio, 
  Globe, 
  ChevronRight, 
  Activity,
  Lock,
  Cpu,
  Gavel,
  Camera,
  UserCheck,
  Ban,
  ChevronLeft,
  CheckCircle2,
  Scan,
  Fingerprint,
  FileCode,
  UserPlus
} from 'lucide-react';

/**
 * SOV ANCHOR: HUMAN INITIALIZATION SEQUENCE v1.0
 * A step-gated cinematic protocol for intent, consent, and identity crystallization.
 * * PILLARS:
 * 1. Protocol Layer (Legal/Telecom Shield)
 * 2. Economic Logic (Utility/Burn Shield)
 * 3. Broadcast Rights (Property/DMCA Shield)
 * 4. Human Profile (Identity Crystallization)
 * 5. Master Agreement (Final Sign-off)
 */

export default function App() {
  const [view, setView] = useState('dormant');
  const [scrolled, setScrolled] = useState(false);
  const [sessionID] = useState(`AIP-${Math.random().toString(36).substring(2, 11).toUpperCase()}`);
  
  const [onboardingProgress, setOnboardingProgress] = useState({
    protocol: false,
    economy: false,
    radio: false,
    profile: false
  });

  const [userProfile, setUserProfile] = useState({
    displayName: '',
    ageBracket: '', // 'minor' | 'adult'
    jurisdiction: 'Ontario',
    country: 'Canada',
    capabilities: {
      canConsent: false,
      actsOnOwnBehalf: true,
    }
  });

  const [showLegalModal, setShowLegalModal] = useState(false);
  const [legalPage, setLegalPage] = useState(0);

  useEffect(() => {
    const mainElement = document.getElementById('main-content');
    if (!mainElement) return;

    const handleScroll = () => {
        setScrolled(mainElement.scrollTop > 50);
    };
    
    mainElement.addEventListener('scroll', handleScroll);
    
    return () => {
        mainElement.removeEventListener('scroll', handleScroll);
    };
  }, []);

  const markStepComplete = (step) => {
    setOnboardingProgress(prev => ({ ...prev, [step]: true }));
    setView('dormant');
  };

  const allPillarsComplete = onboardingProgress.protocol && 
                             onboardingProgress.economy && 
                             onboardingProgress.radio && 
                             onboardingProgress.profile;

  const Navigation = () => (
    <nav className={`fixed top-0 w-full z-50 transition-all duration-700 ${scrolled ? 'bg-black/95 backdrop-blur-xl py-4 border-b border-white/5' : 'bg-transparent py-8'}`}>
      <div className="max-w-7xl mx-auto px-8 flex justify-between items-center">
        <div className="flex items-center gap-3 cursor-pointer" onClick={() => setView('dormant')}>
          <div className="w-10 h-10 bg-cyan-500 rounded-lg flex items-center justify-center shadow-[0_0_20px_rgba(6,182,212,0.3)]">
            <Cpu className="text-black w-6 h-6" />
          </div>
          <div>
            <span className="text-xl font-black tracking-tighter text-white uppercase italic block leading-none">SOV ANCHOR</span>
            <span className="text-[9px] font-mono text-cyan-500 tracking-[0.2em] uppercase">Human Init Sequence</span>
          </div>
        </div>
        
        <div className="hidden lg:flex items-center gap-6">
          <div className="flex gap-3">
            {Object.entries(onboardingProgress).map(([key, complete]) => (
              <div key={key} className={`px-3 py-1 rounded-full border text-[9px] font-black uppercase tracking-widest transition-all ${complete ? 'border-cyan-500/50 text-cyan-400 bg-cyan-500/5' : 'border-white/10 text-gray-600'}`}>
                {key} {complete && 'âœ“'}
              </div>
            ))}
          </div>
          <button 
            disabled={!allPillarsComplete}
            onClick={() => setShowLegalModal(true)}
            className={`px-6 py-2 rounded-full font-black uppercase text-[10px] tracking-widest transition-all ${allPillarsComplete ? 'bg-cyan-500 text-black shadow-[0_0_20px_rgba(6,182,212,0.4)]' : 'bg-white/5 text-gray-700 cursor-not-allowed'}`}
          >
            {allPillarsComplete ? 'Initialize Protocol' : 'Pillars Incomplete'}
          </button>
        </div>
      </div>
    </nav>
  );

  const StepContent = ({ title, icon: Icon, color, children, stepKey, isValid = true }) => (
    <div className="pt-32 pb-20 px-8 max-w-4xl mx-auto animate-in fade-in slide-in-from-bottom-8 duration-700">
      <div className="flex items-center gap-6 mb-12">
        <div className="w-16 h-16 rounded-2xl flex items-center justify-center border shadow-xl" style={{ backgroundColor: `${color}10`, borderColor: `${color}30` }}>
          <Icon size={32} style={{ color: color }} />
        </div>
        <div>
          <h2 className="text-5xl font-black italic uppercase tracking-tighter text-white">{title}</h2>
          <p className="text-gray-500 font-mono text-[10px] uppercase tracking-[0.3em]">Identity Pillar Acknowledgment</p>
        </div>
      </div>
      <div className="space-y-6 mb-12">
        {children}
      </div>
      <div className="flex gap-4">
        <button 
          onClick={() => setView('dormant')}
          className="px-8 py-4 border border-white/10 rounded-full font-black uppercase text-[10px] tracking-widest text-gray-400 hover:text-white transition-all"
        >
          Cancel
        </button>
        <button 
          disabled={!isValid}
          onClick={() => markStepComplete(stepKey)}
          className={`px-10 py-4 rounded-full font-black uppercase text-[10px] tracking-widest transition-all flex items-center gap-3 ${isValid ? 'bg-white text-black hover:bg-cyan-400' : 'bg-white/5 text-gray-700 cursor-not-allowed'}`}
        >
          Secure Pillar <ChevronRight size={16} />
        </button>
      </div>
    </div>
  );

  const ProfileStep = () => {
    const isValid = userProfile.displayName.length > 2 && 
                    userProfile.ageBracket !== '' && 
                    userProfile.capabilities.canConsent;

    return (
      <StepContent title="Human Profile" icon={UserPlus} color="#22c55e" stepKey="profile" isValid={isValid}>
        <div className="grid md:grid-cols-2 gap-8">
          <div className="space-y-6">
            <div className="space-y-2">
              <label className="text-[10px] font-black uppercase tracking-widest text-gray-500">Public Display Name</label>
              <input 
                type="text"
                placeholder="Ex: Neo_Anchor_01"
                className="w-full bg-white/5 border border-white/10 rounded-2xl p-4 text-white focus:outline-none focus:border-cyan-500/50 transition-all font-bold"
                value={userProfile.displayName}
                onChange={(e) => setUserProfile({...userProfile, displayName: e.target.value})}
              />
            </div>
            
            <div className="space-y-2">
              <label className="text-[10px] font-black uppercase tracking-widest text-gray-500">Human Age Bracket</label>
              <div className="grid grid-cols-2 gap-4">
                {['minor', 'adult'].map(bracket => (
                  <button 
                    key={bracket}
                    onClick={() => setUserProfile({...userProfile, ageBracket: bracket})}
                    className={`p-4 rounded-2xl border font-black uppercase text-[10px] tracking-widest transition-all ${userProfile.ageBracket === bracket ? 'border-cyan-500 bg-cyan-500/10 text-cyan-400' : 'border-white/10 text-gray-500 hover:border-white/30'}`}
                  >
                    {bracket}
                  </button>
                ))}
              </div>
            </div>
          </div>

          <div className="space-y-6">
            <div className="p-6 bg-green-500/5 border border-green-500/20 rounded-3xl space-y-4">
              <h4 className="text-xs font-black text-green-400 uppercase italic">Capability Declaration</h4>
              <label className="flex items-start gap-4 group cursor-pointer">
                <input 
                  type="checkbox" 
                  className="mt-1 w-4 h-4 accent-green-500" 
                  checked={userProfile.capabilities.canConsent}
                  onChange={(e) => setUserProfile({...userProfile, capabilities: {...userProfile.capabilities, canConsent: e.target.checked}})}
                />
                <span className="text-[11px] font-bold text-gray-400 group-hover:text-gray-200 transition-colors uppercase leading-relaxed">
                  I possess the legal capacity to provide informed consent within my jurisdiction ({userProfile.jurisdiction}).
                </span>
              </label>
            </div>
            <div className="p-6 bg-white/5 border border-white/10 rounded-3xl">
              <p className="text-[10px] text-gray-500 leading-relaxed uppercase font-mono">
                NOTICE: No Government ID is requested. This profile creates a local identity anchor. 
                Data is crystallized upon final protocol initialization.
              </p>
            </div>
          </div>
        </div>
      </StepContent>
    );
  };

  const DormantState = () => (
    <div className="pt-32 pb-20 px-8">
      <div className="max-w-7xl mx-auto grid lg:grid-cols-2 gap-20 items-center">
        <div className="space-y-10">
          <div className="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-cyan-500/10 border border-cyan-500/20 text-cyan-400 text-[10px] font-black tracking-[0.3em] uppercase">
            <Scan className="w-4 h-4" /> AIP SESSION: {sessionID}
          </div>
          <h1 className="text-7xl md:text-9xl font-black text-white leading-[0.85] tracking-tighter italic">
            IDENTITY <br />
            <span className="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600">ANCHOR.</span>
          </h1>
          <p className="text-xl text-gray-500 max-w-lg leading-relaxed font-medium">
            Complete the four pillars of the initialization protocol to establish your human session.
          </p>
          
          <div className="grid grid-cols-2 gap-4">
            {[
              { id: 'protocol', label: 'Protocol Layer', icon: Globe },
              { id: 'economy', label: 'Economic Logic', icon: Zap },
              { id: 'radio', label: 'Broadcast Rights', icon: Radio },
              { id: 'profile', label: 'Human Profile', icon: UserPlus }
            ].map((p) => {
              const Icon = p.icon;
              return (
                <button
                  key={p.id}
                  onClick={() => setView(p.id)}
                  className={`group relative p-6 rounded-2xl border text-left transition-all duration-500 ${
                    onboardingProgress[p.id]
                      ? 'border-white/20 bg-white/5'
                      : 'border-white/10 hover:border-white/30 hover:bg-white/5'
                  }`}
                >
                  <Icon
                    className={`mb-3 transition-colors ${
                      onboardingProgress[p.id]
                        ? 'text-white'
                        : 'text-gray-600 group-hover:text-white'
                    }`}
                    size={20}
                  />
                  <div className="text-[11px] font-black text-white uppercase italic">
                    {p.label}
                  </div>
                  {onboardingProgress[p.id] && (
                    <CheckCircle2
                      className="absolute top-4 right-4 text-cyan-400"
                      size={14}
                    />
                  )}
                </button>
              );
            })}
          </div>
        </div>

        <div className="relative flex justify-center items-center">
          <div className="absolute inset-0 bg-cyan-500/10 blur-[100px] rounded-full"></div>
          <div className="relative w-full aspect-square max-w-sm border border-white/10 rounded-[3rem] bg-black/40 backdrop-blur-3xl flex flex-col items-center justify-center p-12 overflow-hidden border-t-cyan-500/50 border-t-2">
             <Fingerprint className="w-24 h-24 text-cyan-500/50 mb-8" />
             <div className="text-center space-y-4">
                <h3 className="text-lg font-black text-white uppercase tracking-tighter">Protocol Readiness</h3>
                <div className="font-mono text-[9px] text-gray-500 space-y-1">
                   <div>COMPLETION: {Object.values(onboardingProgress).filter(Boolean).length} / 4</div>
                   <div>STATUS: {allPillarsComplete ? 'READY_TO_INITIALIZE' : 'GATED_BY_INTENT'}</div>
                </div>
             </div>
          </div>
        </div>
      </div>
    </div>
  );

  const LegalModal = () => {
    const pages = [
      {
        title: "Platform Identity",
        content: (
          <div className="space-y-6">
            <div className="p-6 bg-red-500/10 border border-red-500/20 rounded-2xl">
              <h4 className="text-sm font-black text-white uppercase italic mb-2">Non-Telecom Assurance</h4>
              <p className="text-xs text-gray-400 leading-relaxed uppercase font-bold">
                SOV UNIVERSE IS NOT A TELECOMMUNICATIONS PROVIDER. This is terminal-anchored software logic.
              </p>
            </div>
            <div className="p-6 bg-white/5 border border-white/10 rounded-2xl">
               <h4 className="text-xs font-black text-white uppercase mb-2">Crystallized Identity</h4>
               <p className="text-[11px] text-gray-500 font-mono">
                 NAME: {userProfile.displayName} <br />
                 CATEGORY: {userProfile.ageBracket.toUpperCase()} <br />
                 JURISDICTION: {userProfile.jurisdiction}, {userProfile.country}
               </p>
            </div>
          </div>
        )
      },
      {
        title: "Master Agreement",
        content: (
          <div className="space-y-4">
             <div className="space-y-3">
                {[
                  "I am the human defined in the crystallized profile.",
                  "I understand Spike Points carry NO monetary value.",
                  "I accept sole broadcast responsibility for linked property.",
                  "I consent to one-time identity anchoring."
                ].map((text, i) => (
                  <label key={i} className="flex items-center gap-4 p-3 bg-white/5 rounded-xl border border-white/5 hover:border-cyan-500/30 transition-all cursor-pointer">
                     <input type="checkbox" className="w-4 h-4 accent-cyan-500" />
                     <span className="text-[10px] font-black text-gray-400 uppercase tracking-widest">{text}</span>
                  </label>
                ))}
             </div>
             <div className="p-4 bg-black rounded-xl border border-white/5">
                <div className="flex justify-between items-center mb-2">
                   <span className="text-[8px] font-black text-cyan-500 uppercase tracking-widest">AIP Audit Packet Generated</span>
                </div>
                <div className="font-mono text-[8px] text-gray-600">
                   SIG_ID: {Math.random().toString(36).substring(7).toUpperCase()} <br />
                   ANCHOR_TIME: {new Date().toISOString()}
                </div>
             </div>
          </div>
        )
      }
    ];

    return (
      <div className="fixed inset-0 z-[100] flex items-center justify-center p-6 bg-black/98 backdrop-blur-3xl animate-in fade-in duration-500">
        <div className="max-w-2xl w-full bg-[#080808] border border-white/10 rounded-[3rem] overflow-hidden flex flex-col h-[75vh] shadow-2xl">
          <div className="p-8 border-b border-white/5 flex justify-between items-center">
             <h3 className="text-lg font-black text-white uppercase italic tracking-tighter">Anchor Initialization</h3>
             <div className="text-[9px] font-mono text-gray-600 bg-white/5 px-3 py-1 rounded-full">{legalPage + 1} / {pages.length}</div>
          </div>
          <div className="flex-1 p-10 overflow-y-auto">
             <h2 className="text-3xl font-black text-white uppercase tracking-tighter mb-8 italic">{pages[legalPage].title}</h2>
             {pages[legalPage].content}
          </div>
          <div className="p-8 border-t border-white/5 bg-black/50 flex justify-between items-center">
             <button onClick={() => setLegalPage(p => Math.max(0, p-1))} className="text-[10px] font-black uppercase text-gray-500 hover:text-white">Back</button>
             {legalPage < pages.length - 1 ? (
                <button onClick={() => setLegalPage(p => p + 1)} className="bg-white text-black px-8 py-3 rounded-full font-black uppercase text-[10px]">Next Step</button>
             ) : (
                <button onClick={() => { setShowLegalModal(false); setView('initialized'); }} className="bg-cyan-500 text-black px-10 py-3 rounded-full font-black uppercase text-[10px] shadow-[0_0_30px_rgba(6,182,212,0.4)]">Sign & Anchor</button>
             )}
          </div>
        </div>
      </div>
    );
  };

  return (
    <div className="min-h-screen bg-[#030303] text-white font-sans selection:bg-cyan-500" id="main-container">
      <Navigation />
      {showLegalModal && <LegalModal />}
      
      <main id="main-content" className="h-screen overflow-y-auto">
        {view === 'dormant' && <DormantState />}
        {view === 'profile' && <ProfileStep />}
        
        {view === 'protocol' && (
          <StepContent title="Protocol" icon={Globe} color="#06b6d4" stepKey="protocol">
            <div className="p-8 bg-[#080808] border border-white/10 rounded-3xl">
              <h3 className="text-lg font-black text-cyan-400 uppercase mb-4 italic">Infrastructure Exemption</h3>
              <p className="text-sm text-gray-500 leading-relaxed font-medium uppercase">
                BY INITIALIZING THIS ANCHOR, YOU ACKNOWLEDGE THAT THIS INTERFACE DOES NOT PROVIDE PUBLIC TELECOMMUNICATIONS SERVICES, SIGNAL ROUTING, OR VOICE/DATA TRANSMISSION INFRASTRUCTURE.
              </p>
            </div>
          </StepContent>
        )}

        {view === 'economy' && (
          <StepContent title="Economy" icon={Zap} color="#f59e0b" stepKey="economy">
            <div className="p-8 bg-[#080808] border border-white/10 rounded-3xl">
              <h3 className="text-lg font-black text-amber-500 uppercase mb-4 italic">Economic Clarity</h3>
              <p className="text-sm text-gray-500 leading-relaxed font-medium uppercase">
                ALL UNITS (SPIKE POINTS / SOV DOLLARS) ARE INTERNAL SOFTWARE METRICS. NO EXPECTATION OF PROFIT. NO REDEMPTION FOR FIAT.
              </p>
            </div>
          </StepContent>
        )}

        {view === 'radio' && (
          <StepContent title="Radio" icon={Radio} color="#ef4444" stepKey="radio">
            <div className="p-8 bg-[#080808] border border-white/10 rounded-3xl">
              <h3 className="text-lg font-black text-red-500 uppercase mb-4 italic">Broadcast Sovereignty</h3>
              <p className="text-sm text-gray-500 leading-relaxed font-medium uppercase">
                YOU ARE THE BROADCASTER OF RECORD. THIS PLATFORM FUNCTIONS AS A LENS FOR USER-PROVIDED PROPERTY. DMCA SAFE HARBOR STATUS APPLIES TO ALL ANCHORED SESSIONS.
              </p>
            </div>
          </StepContent>
        )}

        {view === 'initialized' && (
          <div className="h-screen flex items-center justify-center p-8 animate-in zoom-in duration-1000">
             <div className="text-center space-y-8">
                <div className="w-24 h-24 bg-cyan-500 rounded-full mx-auto flex items-center justify-center shadow-[0_0_60px_rgba(6,182,212,0.4)]">
                   <CheckCircle2 size={40} className="text-black" />
                </div>
                <div className="space-y-2">
                   <h2 className="text-5xl font-black italic uppercase text-white tracking-tighter">Anchor Established</h2>
                   <p className="text-cyan-500 font-mono text-[10px] tracking-[0.3em] uppercase">Human ID Crystallized</p>
                </div>
                <div className="p-6 bg-white/5 border border-white/10 rounded-3xl max-w-sm mx-auto font-mono text-[9px] text-gray-500 text-left space-y-1">
                   <div>DISPLAY_NAME: {userProfile.displayName}</div>
                   <div>ANCHOR_ID: {Math.random().toString(36).substring(4).toUpperCase()}</div>
                   <div>SANDBOX: {userProfile.ageBracket.toUpperCase()}</div>
                </div>
                <button className="px-10 py-4 bg-white text-black rounded-full font-black uppercase text-[10px] tracking-widest hover:bg-cyan-400 transition-all">
                   Enter University
                </button>
             </div>
          </div>
        )}
      </main>

      <footer className="py-12 border-t border-white/5 opacity-40">
        <div className="max-w-7xl mx-auto px-8 flex flex-col md:flex-row justify-between items-center gap-6">
          <div className="flex items-center gap-3">
            <Lock size={14} className="text-cyan-500" />
            <span className="text-[10px] font-black uppercase tracking-widest italic">AIP 1.0 SECURE GATEWAY</span>
          </div>
          <div className="text-[9px] font-mono text-gray-600 uppercase text-center md:text-right">
            Jurisdiction: {userProfile.jurisdiction}, {userProfile.country} <br />
            Session: {sessionID}
          </div>
        </div>
      </footer>
    </div>
  );
}
