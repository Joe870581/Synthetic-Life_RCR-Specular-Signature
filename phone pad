'use client';

import React, { useState, useRef, useEffect, Suspense, useCallback, useMemo } from 'react';
import { useSearchParams, useRouter } from 'next/navigation';
import { 
  Cpu, 
  User, 
  ShieldCheck,
  Zap,
  Radio,
  Gamepad2,
  Film,
  MessageSquare,
  Activity,
  Briefcase,
  Wallet,
  Star,
  Users as UsersIcon,
  Settings,
  Globe,
  LayoutGrid,
  Search,
  Phone,
  Camera,
  MapPin,
  FolderKanban,
  Plus,
  ArrowLeft,
  ArrowRight,
  X,
  Video,
  FileUp,
  Palette,
  Wifi,
  BatteryCharging,
  GitBranch,
  Home
} from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';
import { FamilyDataProvider, useFamilyData, type FamilyMember } from '@/contexts/FamilyDataContext';
import Image from 'next/image';

// --- UTILITY ---
const cn = (...classes) => classes.filter(Boolean).join(' ');


// --- MOCK DATA (for universe search simulation) ---
const UNIVERSE_REGISTRY = [
  { id: 'f1', name: 'Coach Dan', avatar: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Dan', isFriendOfParent: true },
  { id: 'f2', name: 'Uncle Steve', avatar: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Steve', isFriendOfParent: true },
  { id: 'x9', name: 'Unknown Stranger', avatar: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Stranger', isFriendOfParent: false },
];


// --- MAIN APP COMPONENT ---
const AppContent = () => {
    const searchParams = useSearchParams();
    const userId = searchParams.get('userId');
    const sessionId = searchParams.get('sessionId');
    const { familyState, isLoaded, updateFamilyMember } = useFamilyData();
    const familyMembers = useMemo(() => familyState.members ? Object.values(familyState.members) : [], [familyState.members]);

    const router = useRouter();

    const [activeStage, setActiveStage] = useState(1);
    const [isNavOverlayVisible, setIsNavOverlayVisible] = useState(false);
    const [modalUrl, setModalUrl] = useState(null);
    const [isAppLauncherOpen, setIsAppLauncherOpen] = useState(false);
    const [isProfileMenuOpen, setIsProfileMenuOpen] = useState(false);
    const longPressTimer = useRef(null);
    const profileImageInputRef = useRef<HTMLInputElement>(null);

    const [query, setQuery] = useState('');
    const [liveResults, setLiveResults] = useState([]);
    
    const currentUser = useMemo(() => {
        if (!isLoaded || familyMembers.length === 0) return null;
        return familyMembers.find(m => m.id === userId) || familyMembers.find(m => m.type === 'parent') || null;
    }, [userId, familyMembers, isLoaded]);

    const isAdult = useMemo(() => {
        if (!currentUser || !currentUser.dob) return false;
        const birthDate = new Date(currentUser.dob);
        const today = new Date();
        let age = today.getFullYear() - birthDate.getFullYear();
        const m = today.getMonth() - birthDate.getMonth();
        if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) {
            age--;
        }
        return age >= 16;
    }, [currentUser]);

    const APP_SETS = React.useMemo(() => {
        const socialPostingUrl = isAdult ? `/adult-app/adult-socialpost-view?sessionId=${sessionId}&userId=${userId}` : `/kids/kids-app/socialpost-view?sessionId=${sessionId}&userId=${userId}`;
        
        return [
          [ 
              { id: 'phone', title: 'Phone', href: `/family-shared/phone-pad?sessionId=${sessionId}&userId=${userId}`, icon: <Phone /> },
              { id: 'camera', title: 'Camera', href: `/shared-app/ar-camera?sessionId=${sessionId}&userId=${userId}`, icon: <Camera /> },
              { id: 'wallet', title: 'Wallet', href: `/adult-app/my-personal-bank?sessionId=${sessionId}&userId=${userId}`, icon: <Wallet /> },
              { id: 'map', title: 'Map', href: `/shared-app/family-anchor-map?sessionId=${sessionId}&userId=${userId}`, icon: <MapPin /> },
          ],
          [ 
              { id: 'myclips', title: 'MyClips', href: `/shared-app/myclips?sessionId=${sessionId}&userId=${userId}`, icon: <Film /> },
              { id: 'video-posting', title: 'Video Posting', href: `/shared-app/video-posting?sessionId=${sessionId}&userId=${userId}`, icon: <Video /> },
              { id: 'social-posting', title: isAdult ? 'Adult Feed' : 'Kids Feed', href: socialPostingUrl, icon: <MessageSquare /> },
              { id: 'media-vault', title: 'Media Vault', href: `/family-shared/media-vault?sessionId=${sessionId}&userId=${userId}`, icon: <FolderKanban /> },
          ],
        ];
    }, [sessionId, userId, isAdult]);

    useEffect(() => {
        try {
            const savedPos = localStorage.getItem('phonePadDefaultPos');
            if (savedPos) {
                setActiveStage(JSON.parse(savedPos));
            }
        } catch (e) {
            console.error("Failed to load saved position from localStorage", e);
        }
    }, []);
    
    const handleLocalQueryChange = (e) => {
        setQuery(e.target.value);
        if (e.target.value.trim()) {
            const results = UNIVERSE_REGISTRY.filter(user => 
                user.name.toLowerCase().includes(e.target.value.toLowerCase())
            );
            setLiveResults(results);
        } else {
            setLiveResults([]);
        }
    };
    
    const handleSearchSubmit = (e) => {
        e.preventDefault();
        if (!query.trim()) return;
        const searchUrl = `/adult-app/adults-message?search=${encodeURIComponent(query)}`;
        setModalUrl(searchUrl);
        setLiveResults([]);
    };

    const handleSetDefault = (stage) => {
        setActiveStage(stage);
        try {
            localStorage.setItem('phonePadDefaultPos', JSON.stringify(stage));
        } catch(e) {
            console.error("Failed to save position to localStorage", e);
        }
        setIsNavOverlayVisible(false);
    };
    
    const handlePanEnd = (event, info) => {
        const { offset, velocity } = info;
        const swipeThreshold = 50;
        const velocityThreshold = 100;

        if (Math.abs(offset.x) > swipeThreshold || Math.abs(velocity.x) > velocityThreshold) {
            if (offset.x < 0) {
                setActiveStage(prev => Math.min(2, prev + 1));
            } else {
                setActiveStage(prev => Math.max(0, prev - 1));
            }
        }
    };
    
    const handlePanStart = () => {
        longPressTimer.current = setTimeout(() => {
            setIsNavOverlayVisible(true);
        }, 500); 
    };

    const clearLongPress = () => {
        if(longPressTimer.current) clearTimeout(longPressTimer.current);
    };
    
    const handleProfileImageUpload = (e: React.ChangeEvent<HTMLInputElement>) => {
      if (e.target.files && e.target.files[0] && currentUser) {
        const file = e.target.files[0];
        const reader = new FileReader();
        reader.onload = (event) => {
          updateFamilyMember(currentUser.id, 'imageUrl', event.target.result as string);
        };
        reader.readAsDataURL(file);
      }
      setIsProfileMenuOpen(false);
    };

    const SearchView = () => (
        <motion.div
            key="search-view"
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            exit={{ opacity: 0, y: -20, scale: 0.9 }}
            className="w-full h-full flex flex-col items-center justify-center"
        >
            <div id="brand-area" className="text-center mb-16 transition-all duration-700">
                <h1 className="text-5xl font-light tracking-[0.4em] text-white mb-4 uppercase">SOV</h1>
                <div className="text-[9px] font-medium uppercase tracking-[1em] text-white/30">Strategic Operating Vertex</div>
            </div>

            <div id="search-container" className="search-wrap w-full max-w-2xl">
                <form onSubmit={handleSearchSubmit}>
                    <div className="glass-search relative bg-black/50 backdrop-blur-xl border border-white/10 rounded-2xl p-2 flex items-center shadow-2xl">
                        <Search className="text-white/20 mx-4" />
                        <input
                            id="main-input"
                            type="text" 
                            placeholder="Command or Identity Query..." 
                            className="bg-transparent focus:outline-none w-full p-4 text-lg text-white placeholder:text-white/20"
                            autoComplete="off"
                            value={query}
                            onChange={handleLocalQueryChange}
                        />
                    </div>
                </form>
               <AnimatePresence>
               {liveResults.length > 0 && (
                   <motion.div 
                      initial={{ opacity: 0, y: -10 }}
                      animate={{ opacity: 1, y: 0 }}
                      exit={{ opacity: 0, y: -10 }}
                      className="mt-4 p-2 bg-black/50 backdrop-blur-xl border border-white/10 rounded-2xl space-y-1"
                   >
                       {liveResults.map(user => (
                           <div key={user.id} onClick={() => setModalUrl(`/adult-app/adults-message?userId=${user.id}`)} className="flex items-center gap-3 p-2 hover:bg-white/5 rounded-lg cursor-pointer">
                               <img src={user.avatar} className="w-8 h-8 rounded-full" alt={user.name} />
                               <span className="font-semibold text-sm">{user.name}</span>
                           </div>
                       ))}
                   </motion.div>
               )}
               </AnimatePresence>
            </div>
        </motion.div>
    );
    
    if (!isLoaded) {
      return <div className="h-screen w-screen bg-[#020202] text-white flex items-center justify-center">Loading User Data...</div>
    }

    return (
        <motion.div 
            className="h-screen w-screen bg-[#020202] text-white font-sans overflow-hidden relative select-none touch-none"
            onPanStart={handlePanStart}
            onPanEnd={(event, info) => {
                clearLongPress();
                if (!isNavOverlayVisible) handlePanEnd(event, info);
            }}
            onPanCancel={clearLongPress}
        >
            <div className="absolute inset-0 pointer-events-none transition-all duration-1000 overflow-hidden">
                <div 
                    className="absolute inset-0 opacity-40 transition-colors duration-1000 ease-in-out"
                    style={{ background: `radial-gradient(circle at ${50 + ((activeStage - 1) * 30)}% 50%, #4c1d95 0%, transparent 70%)` }}
                />
                <div className="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-[0.2] mix-blend-overlay" />
            </div>

            <div className="absolute top-8 left-1/2 -translate-x-1/2 z-50 flex items-center gap-2">
                {[0,1,2].map(i => (
                <button key={i} onClick={() => setActiveStage(i)} className={`w-2 h-2 rounded-full transition-all duration-500 ${activeStage === i ? 'bg-white' : 'bg-white/20'}`} />
                ))}
            </div>

            <AnimatePresence>
              {activeStage === 1 && (
                <motion.div
                  initial={{ opacity: 0 }}
                  animate={{ opacity: 1, transition: { delay: 0.3 } }}
                  exit={{ opacity: 0 }}
                  className="absolute top-8 right-8 z-50"
                >
                    <div className="relative">
                        <button onClick={() => setIsAppLauncherOpen(prev => !prev)} className="p-4 bg-white/5 backdrop-blur-md rounded-full border border-white/10 text-white/70 hover:text-white transition-colors">
                            <LayoutGrid />
                        </button>
                        <AnimatePresence>
                          {isAppLauncherOpen && (
                            <motion.div
                              initial={{ opacity: 0, y: 10, scale: 0.95 }}
                              animate={{ opacity: 1, y: 0, scale: 1 }}
                              exit={{ opacity: 0, y: 10, scale: 0.95 }}
                              className="absolute top-full mt-4 right-0 w-80 bg-black/50 backdrop-blur-xl p-4 rounded-3xl border border-white/10"
                            >
                              <div className="space-y-4">
                                {APP_SETS.map((row, rowIndex) => (
                                  <div key={rowIndex} className="grid grid-cols-4 gap-3">
                                    {row.map(app => (
                                      <button key={app.id} onClick={() => setModalUrl(app.href)} className="flex flex-col items-center gap-2 group w-full text-white/70 hover:text-white">
                                        <div className="w-14 h-14 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:bg-white/10 group-hover:border-white/20 transition-all">
                                          {app.icon}
                                        </div>
                                        <span className="text-[9px] font-bold uppercase tracking-widest">{app.title}</span>
                                      </button>
                                    ))}
                                  </div>
                                ))}
                                <div className="grid grid-cols-4 gap-3">
                                  <button className="flex flex-col items-center gap-2 group w-full text-white/40 hover:text-white">
                                    <div className="w-14 h-14 rounded-2xl bg-white/5 border-2 border-dashed border-white/20 flex items-center justify-center group-hover:bg-white/10 group-hover:border-white/30 transition-all">
                                      <Plus />
                                    </div>
                                    <span className="text-[9px] font-bold uppercase tracking-widest">Add</span>
                                  </button>
                                </div>
                              </div>
                            </motion.div>
                          )}
                        </AnimatePresence>
                    </div>
                </motion.div>
              )}
            </AnimatePresence>
            
            <AnimatePresence>
            {activeStage === 1 && (
                <motion.div
                    initial={{ opacity: 0 }}
                    animate={{ opacity: 1, transition: { delay: 0.3 } }}
                    exit={{ opacity: 0 }}
                    className="absolute top-8 left-8 z-50"
                >
                    <div className="relative">
                        <button onClick={() => setIsProfileMenuOpen(p => !p)} className="w-14 h-14 rounded-full border-2 border-white/20 p-0.5 overflow-hidden">
                            {currentUser?.imageUrl ? (
                                <Image src={currentUser.imageUrl} alt={currentUser.name || 'User'} width={56} height={56} className="rounded-full object-cover" />
                            ) : <div className="w-full h-full rounded-full bg-slate-700 flex items-center justify-center"><User /></div>}
                        </button>
                        <AnimatePresence>
                            {isProfileMenuOpen && (
                                <motion.div 
                                    initial={{ opacity: 0, y: 10 }}
                                    animate={{ opacity: 1, y: 0 }}
                                    exit={{ opacity: 0, y: 10 }}
                                    className="absolute top-full mt-2 w-56 bg-black/50 backdrop-blur-xl border border-white/10 rounded-2xl p-2"
                                >
                                    <button onClick={() => setModalUrl('/shared-app/family-pebbles/character-studio')} className="w-full flex items-center gap-3 p-3 text-sm font-semibold text-left rounded-lg hover:bg-white/10">
                                        <Palette /> Customize Avatar
                                    </button>
                                     <label className="w-full flex items-center gap-3 p-3 text-sm font-semibold text-left rounded-lg hover:bg-white/10 cursor-pointer">
                                        <FileUp /> Upload Photo
                                        <input type="file" ref={profileImageInputRef} onChange={handleProfileImageUpload} className="hidden" accept="image/*"/>
                                    </label>
                                </motion.div>
                            )}
                        </AnimatePresence>
                    </div>
                </motion.div>
            )}
            </AnimatePresence>

            <AnimatePresence>
            {activeStage === 1 && (
                <motion.div
                    initial={{ opacity: 0 }}
                    animate={{ opacity: 1, transition: { delay: 0.3 } }}
                    exit={{ opacity: 0 }}
                    className="absolute top-[8.5rem] left-1/2 -translate-x-1/2 w-full max-w-sm"
                >
                    <div className="flex items-center gap-4 bg-black/30 backdrop-blur-md p-2 rounded-full border border-white/10">
                        <div className="flex items-center gap-2 pl-2">
                           <div className="w-2 h-2 rounded-full bg-green-400 animate-pulse" />
                           <span className="text-[10px] font-bold text-green-400 uppercase">Live Link</span>
                        </div>
                        <div className="flex-1 h-px bg-white/10" />
                        <div className="flex items-center gap-3 text-slate-400">
                           <Wifi size={14} />
                           <BatteryCharging size={14} />
                           <GitBranch size={14} />
                           <Home size={14} />
                        </div>
                    </div>
                </motion.div>
            )}
            </AnimatePresence>

            <motion.div 
                className="flex h-full w-full"
                animate={{ x: `-${activeStage * 100}%` }}
                transition={{ type: 'spring', stiffness: 300, damping: 30 }}
            >
                <div className="w-full h-full flex-shrink-0 p-4 sm:p-8">
                   <div className="w-full h-full bg-black/20 rounded-3xl overflow-hidden">
                     <iframe src={`/shared-app/organizer-multi-grid-app?sessionId=${sessionId}&userId=${userId}`} className="w-full h-full border-none" title="Organizer Grid"/>
                   </div>
                </div>
                <div className="w-full h-full flex-shrink-0 flex flex-col items-center justify-center p-4">
                   <SearchView />
                </div>
                <div className="w-full h-full flex-shrink-0 p-4 sm:p-8">
                   <div className="w-full h-full bg-black/20 rounded-3xl overflow-hidden">
                     <iframe src={`/shared-app/multi-grade-app?sessionId=${sessionId}&userId=${userId}`} className="w-full h-full border-none" title="Entertainment Grid"/>
                   </div>
                </div>
            </motion.div>
            
            <AnimatePresence>
                {isNavOverlayVisible && (
                    <motion.div
                        initial={{ opacity: 0 }}
                        animate={{ opacity: 1 }}
                        exit={{ opacity: 0 }}
                        onClick={() => setIsNavOverlayVisible(false)}
                        className="absolute inset-0 bg-black/80 backdrop-blur-md z-[300] flex items-center justify-center p-8"
                    >
                        <motion.div 
                            initial={{ scale: 0.9, opacity: 0 }}
                            animate={{ scale: 1, opacity: 1 }}
                            exit={{ scale: 0.9, opacity: 0 }}
                            onClick={(e) => e.stopPropagation()}
                            className="grid grid-cols-3 gap-4 w-full max-w-lg bg-black/30 p-4 rounded-3xl border border-white/10"
                        >
                            {[
                                { stage: 0, icon: <LayoutGrid size={24}/>, title: 'Organizer' },
                                { stage: 1, icon: <Search size={24}/>, title: 'Search Hub' },
                                { stage: 2, icon: <Gamepad2 size={24}/>, title: 'Entertainment' }
                            ].map((item) => (
                                <button
                                    key={item.stage}
                                    onClick={() => handleSetDefault(item.stage)}
                                    className="aspect-square bg-white/5 border border-white/10 rounded-2xl flex flex-col items-center justify-center gap-2 text-white/50 hover:bg-white/10 hover:text-white transition-all"
                                >
                                   {item.icon}
                                   <span className="text-xs font-bold text-center">{item.title}</span>
                                </button>
                            ))}
                        </motion.div>
                    </motion.div>
                )}
            </AnimatePresence>

            <AnimatePresence>
                {modalUrl && (
                    <motion.div
                        initial={{ opacity: 0 }}
                        animate={{ opacity: 1 }}
                        exit={{ opacity: 0 }}
                        className="fixed inset-0 z-[400] bg-black/80 backdrop-blur-xl p-4 sm:p-8"
                    >
                        <motion.div 
                            initial={{ y: '100%' }}
                            animate={{ y: '0%' }}
                            exit={{ y: '100%' }}
                            transition={{ type: 'spring', damping: 30, stiffness: 200 }}
                            className="w-full h-full bg-slate-900 rounded-3xl flex flex-col overflow-hidden border border-white/10"
                        >
                            <div className="p-4 border-b border-white/10 flex justify-between items-center flex-shrink-0">
                                <span className="text-xs font-mono text-slate-400">{modalUrl}</span>
                                <button onClick={() => setModalUrl(null)} className="p-2 bg-slate-800 rounded-full hover:bg-slate-700">
                                    <X size={16}/>
                                </button>
                            </div>
                            <iframe src={modalUrl} className="w-full h-full border-none" title="Search Result" />
                        </motion.div>
                    </motion.div>
                )}
            </AnimatePresence>

            <style jsx global>{`
                .touch-none { touch-action: none; }
            `}</style>
        </motion.div>
    );
};

const AppWrapper = () => (
    <Suspense fallback={<div className="h-screen w-screen bg-[#020202] text-white flex items-center justify-center">Loading OS...</div>}>
        <FamilyDataProvider>
            <AppContent />
        </FamilyDataProvider>
    </Suspense>
);

export default AppWrapper;
