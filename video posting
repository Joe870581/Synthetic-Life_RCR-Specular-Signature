// --- UNIVERSAL NAVIGATION HEADER ---
const HeaderNav = () => {
    const [isSearchOpen, setIsSearchOpen] = useState(false);

    const navLinks = [
        { href: '/shared-app/myclips?sessionId=null&userId=p1', icon: HomeIcon, label: 'Home Feed' },
