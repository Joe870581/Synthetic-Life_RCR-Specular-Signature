    ];
    return (
        <div className="max-w-4xl mx-auto py-24 text-center">
            <h1 className="text-5xl font-black italic tracking-tighter mb-4">The Video Hub</h1>
            <p className="text-zinc-400 text-lg mb-12">Long-form content, live broadcasts, and cinematic experiences.</p>
            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                {categories.map(cat => (
                    <HubCard key={cat.id} {...cat} onClick={() => onSelectCategory(cat.id)} />
                ))}
            </div>
        </div>
    );
};


