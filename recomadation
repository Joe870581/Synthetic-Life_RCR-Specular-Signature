'use client';
import { useState } from 'react';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from '@/components/ui/card';
import { useToast } from '@/hooks/use-toast';
import { provideAIRecommendations, type AIRecommendationOutput } from '@/ai/flows/provide-ai-recommendations';
import { Sparkles, Zap } from 'lucide-react';
import { Skeleton } from '@/components/ui/skeleton';

function RecommendationCard({ recommendation }: { recommendation: AIRecommendationOutput['recommendations'][0] }) {
  return (
    <Card className="flex flex-col">
      <CardHeader>
        <CardTitle>{recommendation.activity}</CardTitle>
        <CardDescription>{recommendation.location}</CardDescription>
      </CardHeader>
      <CardContent className="flex-grow">
        <p className="text-sm text-muted-foreground">{recommendation.description}</p>
      </CardContent>
      <div className="p-6 pt-0 flex justify-between items-center text-sm">
        <div className="font-semibold">~ {recommendation.estimatedCost}</div>
        <div className="flex items-center gap-1 text-yellow-500">
            <Zap className="size-4" />
            <span className="font-bold">{(recommendation.suitabilityScore * 100).toFixed(0)}% Match</span>
        </div>
      </div>
    </Card>
  );
}

function RecommendationsSkeleton() {
    return (
        <div className="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {[...Array(3)].map((_, i) => (
                <Card key={i}>
                    <CardHeader>
                        <Skeleton className="h-6 w-3/4" />
                        <Skeleton className="h-4 w-1/2" />
                    </CardHeader>
                    <CardContent>
                        <Skeleton className="h-4 w-full mb-2" />
                        <Skeleton className="h-4 w-5/6" />
                    </CardContent>
                    <div className="p-6 pt-0 flex justify-between">
                        <Skeleton className="h-5 w-1/4" />
                        <Skeleton className="h-5 w-1/3" />
                    </div>
                </Card>
            ))}
        </div>
    );
}

export default function RecommendationsPage() {
  const [recommendations, setRecommendations] = useState<AIRecommendationOutput | null>(null);
  const [isLoading, setIsLoading] = useState(false);
  const { toast } = useToast();

  const handleGetRecommendations = async () => {
    setIsLoading(true);
    setRecommendations(null);
    try {
      // In a real app, this data would be dynamically generated
      const familyData = {
        familyHistory: "Enjoys outdoor activities like hiking and park visits. Went to the zoo last month and loved it. Kids are 8 and 10. Prefers weekend activities.",
        preferences: "Budget-friendly options are preferred. The 10-year-old is interested in science, the 8-year-old loves art.",
      };
      const result = await provideAIRecommendations(familyData);
      setRecommendations(result);
    } catch (error) {
      console.error(error);
      toast({
        title: 'Error Generating Recommendations',
        description: 'Could not get recommendations at this time.',
        variant: 'destructive',
      });
    } finally {
      setIsLoading(false);
    }
  };

  return (
    <div className="space-y-6">
       <div className="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 className="text-3xl font-bold font-headline">AI Recommendations</h1>
            <p className="text-muted-foreground">
            Discover your next family adventure, powered by AI.
            </p>
        </div>
        <Button onClick={handleGetRecommendations} disabled={isLoading} size="lg">
            <Sparkles className="mr-2 size-5" />
            {isLoading ? 'Generating Ideas...' : 'Generate New Ideas'}
        </Button>
      </div>

      {isLoading && <RecommendationsSkeleton />}

      {!isLoading && !recommendations && (
        <Card className="text-center py-20">
            <CardContent className="space-y-4">
                <div className="mx-auto bg-primary/10 p-4 rounded-full w-fit">
                    <Sparkles className="size-10 text-primary" />
                </div>
                <h3 className="text-xl font-semibold">Ready for some fun?</h3>
                <p className="text-muted-foreground">Click the "Generate New Ideas" button to get personalized activity recommendations for your family.</p>
            </CardContent>
        </Card>
      )}

      {recommendations && (
        <div className="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {recommendations.recommendations.map((rec, index) => (
            <RecommendationCard key={index} recommendation={rec} />
          ))}
        </div>
      )}
    </div>
  );
}
