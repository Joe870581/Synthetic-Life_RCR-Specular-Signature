// --- Reusable Components ---
const SectionHeader = ({ icon: Icon, title, className='' }) => (
    <h2 className={`text-2xl font-bold text-indigo-400 mb-6 border-b border-indigo-700/50 pb-2 flex items-center ${className}`}>
        <Icon className="w-5 h-5 mr-3" /> {title}
    </h2>
);

const PhaseCard = ({ phase, title, objective, deliverable, tech, icon: Icon, status }) => {
    const statusConfig = {
        'COMPLETE': { color: 'border-green-500/50 bg-green-500/10 text-green-300', text: 'COMPLETE' },
        'IN_PROGRESS': { color: 'border-yellow-500/50 bg-yellow-500/10 text-yellow-300', text: 'IN PROGRESS' },
        'DEFINED': { color: 'border-blue-500/50 bg-blue-500/10 text-blue-300', text: 'DEFINED' },
    };
    const currentStatus = statusConfig[status] || statusConfig['DEFINED'];

    return (
        <div className="bg-slate-800/50 rounded-2xl p-6 border border-slate-700 h-full flex flex-col">
            <div className="flex justify-between items-start mb-4">
                <div className="p-3 rounded-xl bg-slate-900 border border-slate-700">
                    <Icon className="w-8 h-8 text-indigo-400" />
                </div>
                <div className={`px-3 py-1 rounded-full text-xs font-black tracking-widest ${currentStatus.color}`}>
                    {currentStatus.text}
                </div>
            </div>
            <p className="text-sm font-bold text-slate-500 uppercase tracking-widest">{phase}</p>
            <h3 className="text-2xl font-black text-white mb-2">{title}</h3>
            <p className="text-sm text-slate-400 leading-relaxed flex-grow">{objective}</p>
            <div className="mt-6 pt-4 border-t border-slate-700/50">
                <p className="text-xs font-bold text-slate-500 uppercase mb-2">Key Deliverable:</p>
                <p className="text-sm font-medium text-indigo-300">{deliverable}</p>
            </div>
             <div className="mt-4 pt-4 border-t border-slate-700/50">
                <p className="text-xs font-bold text-slate-500 uppercase mb-2">Core Tech:</p>
                <p className="text-sm font-mono text-slate-400">{tech}</p>
            </div>
        </div>
    );
};


