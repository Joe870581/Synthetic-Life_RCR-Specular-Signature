
import { NextRequest, NextResponse } from 'next/server';
import Stripe from 'stripe';
import { db } from '@/lib/firebaseAdmin';

const stripeSecretKey = process.env.STRIPE_SECRET_KEY;

if (!stripeSecretKey) {
  throw new Error("CRITICAL: STRIPE_SECRET_KEY is not set in the environment.");
}

const stripe = new Stripe(stripeSecretKey, {
  apiVersion: '2024-06-20',
});

const SOV_RATE = 10 / 25; // 10 SOV$ for 25 CAD

export async function POST(req: NextRequest) {
  if (!process.env.STRIPE_SECRET_KEY || process.env.STRIPE_SECRET_KEY.includes("YOUR_STRIPE_SECRET_KEY")) {
    return NextResponse.json(
      { error: "Server-side Stripe secret key is not configured. Please add it to your .env file." },
      { status: 500 }
    );
  }

  try {
    const { userId, userEmail } = await req.json();

    if (!userId) {
      return NextResponse.json({ error: 'User ID is required.' }, { status: 400 });
    }

    let customerId;
    const existingCustomers = await stripe.customers.list({ email: userEmail, limit: 1 });

    if (existingCustomers.data.length > 0) {
      customerId = existingCustomers.data[0].id;
    } else {
      const customer = await stripe.customers.create({
        email: userEmail,
        metadata: {
          firebaseUID: userId,
        },
      });
      customerId = customer.id;
    }

    const baseUrl = process.env.NEXT_PUBLIC_BASE_URL || new URL(req.url).origin;
    
    // Use the real Price ID for the "Sov Economy" product which grants 10 SOV$ for $25.
    const priceId = 'price_1Slnv3Ju6ADgPHVmab6ynLL3';

    const session = await stripe.checkout.sessions.create({
      payment_method_types: ['card'],
      customer: customerId,
      line_items: [
        {
          price: priceId,
          quantity: 1,
        },
      ],
      mode: 'payment',
      success_url: `${baseUrl}/admin/dashboard/system-settings/banking?status=success&session_id={CHECKOUT_SESSION_ID}`,
      cancel_url: `${baseUrl}/admin/dashboard/system-settings/banking?status=cancelled`,
      client_reference_id: userId,
      metadata: {
        userId: userId,
        amountCAD: 25.00,
        amountSOV: 10, // Hardcode the SOV amount based on the product
      }
    });
    
    return NextResponse.json({ sessionId: session.id });

  } catch (err: any) {
    console.error("Stripe session creation error:", err);
    return NextResponse.json({ error: err.message }, { status: 500 });
  }
}
