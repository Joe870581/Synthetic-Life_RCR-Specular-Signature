];

const videoUniverse = [
    { id: 1, title: "My First Music Video!", duration: "0:45", creator: "Paisley", views: "1.2K", cover: "https://images.unsplash.com/photo-1614613535308-eb5fbd3d2c17?w=600&q=80", rating: "Kids" },
