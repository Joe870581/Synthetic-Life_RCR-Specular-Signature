
'use server';

/**
 * @fileOverview A Genkit flow for generating calendar event details.
 *
 * - generateCalendarEventDetails - A function that generates event details based on a prompt.
 * - GenerateCalendarEventDetailsInput - The input type for the generateCalendarEventDetails function.
 * - GenerateCalendarEventDetailsOutput - The return type for the generateCalendarEventDetails function.
 */

import {ai} from '@/ai/genkit-client';
import {z} from 'genkit';

const GenerateCalendarEventDetailsInputSchema = z.object({
  prompt: z.string().describe('A prompt describing the calendar event.'),
});
export type GenerateCalendarEventDetailsInput = z.infer<
  typeof GenerateCalendarEventDetailsInputSchema
>;

const GenerateCalendarEventDetailsOutputSchema = z.object({
  title: z.string().describe('The title of the event.'),
  description: z.string().describe('A detailed description of the event.'),
  startTime: z.string().describe('The start time of the event.'),
  endTime: z.string().describe('The end time of the event.'),
  location: z.string().describe('The location of the event.'),
});

export type GenerateCalendarEventDetailsOutput = z.infer<
  typeof GenerateCalendarEventDetailsOutputSchema
>;

export async function generateCalendarEventDetails(
  input: GenerateCalendarEventDetailsInput
): Promise<GenerateCalendarEventDetailsOutput> {
  return generateCalendarEventDetailsFlow(input);
}

const prompt = ai.definePrompt({
  name: 'generateCalendarEventDetailsPrompt',
  input: {schema: GenerateCalendarEventDetailsInputSchema},
  output: {schema: GenerateCalendarEventDetailsOutputSchema},
  prompt: `You are a calendar event scheduling assistant. Generate a calendar event, including a title, detailed description, start time, end time and location based on the following prompt: {{{prompt}}}`,
});

const generateCalendarEventDetailsFlow = ai.defineFlow(
  {
    name: 'generateCalendarEventDetailsFlow',
    inputSchema: GenerateCalendarEventDetailsInputSchema,
    outputSchema: GenerateCalendarEventDetailsOutputSchema,
  },
  async input => {
    const {output} = await prompt(input);
    return output!;
  }
);
