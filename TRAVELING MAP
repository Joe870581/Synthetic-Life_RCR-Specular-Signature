    <script>
        const carMarker = document.getElementById('car-marker');
        const turnDistance = document.getElementById('turn-distance');
        const speedDisplay = document.getElementById('speed-display');

        let progress = 0;

        function updateSimulation() {
            // 1. Simulate Car Progress
            progress += 0.005; // Adjust speed
            if (progress > 1) {
                progress = 0; // Loop the simulation
            }

            // Calculate position: 75% is the bottom of the visible map, 15% is the top (simulating car moving up)
            const topPosition = 75 - (progress * 60); 
            carMarker.style.top = `${topPosition}%`;

            // 2. Simulate Nav Data Updates
            const distance = (5.2 * (1 - progress * 2)) + 0.5;
            turnDistance.textContent = `${Math.max(0.1, distance).toFixed(1)} km`;

            // 3. Simulate Speed (Should ideally come from the parent React app, but mocked here for independence)
            const speed = Math.round(105 + (Math.random() * 10 - 5));
            speedDisplay.textContent = speed;
            speedDisplay.style.color = speed > 110 ? '#F87171' : '#E5E7EB'; // Red if speeding

            requestAnimationFrame(updateSimulation);
        }

        // Delay to ensure rendering before starting animation loop
        setTimeout(updateSimulation, 50);
    </script>
</body>
