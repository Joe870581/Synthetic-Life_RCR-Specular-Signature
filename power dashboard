
'use client';

import React from 'react';
import { usePowerEnforcementEngine, EnforcementState } from '@/lib/power-engine';
import { Power, Thermometer, BatteryCharging, Shield, Activity } from 'lucide-react';

const cn = (...classes) => classes.filter(Boolean).join(' ');

const StatusCard = ({ title, value, icon: Icon, colorClass, pulse = false }) => (
    <div className={`p-6 rounded-2xl border ${colorClass} bg-gradient-to-br from-white/10 to-transparent`}>
        <div className="flex items-center gap-3 mb-2">
            <Icon className="w-5 h-5" />
            <h3 className="font-bold text-sm uppercase tracking-wider">{title}</h3>
        </div>
        <p className={cn("text-4xl font-black", pulse && 'animate-pulse')}>{value}</p>
    </div>
);

export default function PowerDashboardPage() {
    const { state, battery, thermal, chargeLimit, throttleTemp } = usePowerEnforcementEngine();

    const stateConfig: Record<EnforcementState, { color: string; label: string; }> = {
        'Charging': { color: 'border-green-500', label: 'CHARGING' },
        'Idle': { color: 'border-slate-500', label: 'IDLE' },
        'Veto (Limit)': { color: 'border-yellow-500', label: 'VETO: CHARGE LIMIT' },
        'Veto (Thermal)': { color: 'border-red-500', label: 'VETO: THERMAL THROTTLE' },
    };

    const currentConfig = stateConfig[state];

    return (
        <div className="min-h-screen bg-slate-950 text-white p-8 font-sans">
            <header className="text-center mb-12">
                <h1 className="text-4xl font-black tracking-tighter flex items-center justify-center gap-3">
                    <Shield className="text-indigo-400" />
                    Power Enforcement Dashboard
                </h1>
                <p className="text-slate-400 mt-2">Live status of the Sovereign Power Guard.</p>
            </header>

            <div className="max-w-4xl mx-auto space-y-8">
                <div className={cn("p-8 rounded-3xl border-4 text-center transition-all duration-500", currentConfig.color)}>
                    <h2 className="text-sm font-bold text-slate-400 uppercase tracking-widest">System State</h2>
                    <p className="text-5xl font-black tracking-tighter mt-1">{currentConfig.label}</p>
                </div>

                <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <StatusCard
                        title="Battery Level"
                        value={`${battery.percentage.toFixed(1)}%`}
                        icon={BatteryCharging}
                        colorClass="border-green-500/50"
                        pulse={battery.charging}
                    />
                    <StatusCard
                        title="Device Temperature"
                        value={`${thermal.temperature.toFixed(1)}°C`}
                        icon={Thermometer}
                        colorClass={thermal.isThrottled ? "border-red-500/50" : "border-slate-600"}
                        pulse={thermal.isThrottled}
                    />
                </div>

                <div className="p-6 bg-slate-900/50 border border-slate-800 rounded-2xl">
                    <h3 className="text-lg font-bold mb-4 flex items-center gap-3"><Activity /> Policy Rules</h3>
                    <div className="grid grid-cols-2 gap-4 text-center">
                        <div className="bg-slate-800 p-4 rounded-xl">
                            <p className="text-xs text-slate-400 font-bold uppercase">Charge Limit</p>
                            <p className="text-2xl font-bold">{chargeLimit}%</p>
                        </div>
                         <div className="bg-slate-800 p-4 rounded-xl">
                            <p className="text-xs text-slate-400 font-bold uppercase">Thermal Throttle</p>
                            <p className="text-2xl font-bold">{throttleTemp}°C</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    );
}
