"use client";

import React, { useMemo } from 'react';
import { SITE_CATALOG } from '@/lib/app-data';
import { CheckCircle } from 'lucide-react';

export default function SovereignCapsule() {
  const visibleCatalog = useMemo(
    () =>
      SITE_CATALOG.filter(
        app =>
          !app.system.deprecated &&
          !app.system.internalOnly
      ),
    []
  );

  return (
    <div className="w-screen h-screen bg-background text-foreground flex flex-col items-center p-8 overflow-y-auto">
      <header className="w-full max-w-6xl mb-8 text-center">
        <h1 className="text-4xl font-extrabold text-primary tracking-wider">SOVEREIGN CAPSULE</h1>
        <p className="text-muted-foreground mt-2">A trust-first catalog of web services.</p>
      </header>
      
      <main className="w-full max-w-6xl">
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {visibleCatalog.map(app => (
            <div
              key={app.id}
              className="rounded-xl border border-border bg-card text-card-foreground p-4 hover:border-accent transition-all duration-200 flex flex-col gap-3 shadow-lg hover:shadow-accent/20 cursor-pointer"
            >
              <div className="flex items-center gap-3">
                <img src={app.icon} className="h-10 w-10 rounded-md" alt={`${app.name} icon`} />
                <div className="flex-1">
                  <h3 className="font-semibold">{app.name}</h3>
                  <p className="text-xs text-muted-foreground line-clamp-2">{app.description}</p>
                </div>
              </div>

              <div className="mt-auto pt-3 border-t border-border/50 flex justify-between items-center text-xs">
                <span className="text-muted-foreground capitalize">{app.category}</span>

                {app.trust.verified && (
                  <span className="flex items-center gap-1.5 text-primary font-medium">
                    <CheckCircle className="w-4 h-4" />
                    Verified
                  </span>
                )}
              </div>
            </div>
          ))}
        </div>
      </main>
    </div>
  );
}


// --- Canonical Site Catalog Data Schema (Trust-First) ---
export type SiteCatalogEntry = {
  id: string; // immutable internal ID
  slug: string; // URL-safe identifier
  name: string; // public display name
  description: string; // human-readable summary

  category:
    | 'media'
    | 'social'
    | 'finance'
    | 'tools'
    | 'shopping'
    | 'education'
    | 'gaming'
    | 'business'
    | 'system';

  subcategory?: string;

  url: string; // launch URL
  icon: string; // icon path or data URI

  trust: {
    verified: boolean; // manually reviewed
    verificationLevel: 0 | 1 | 2 | 3;
    // 0 = unverified, 1 = basic scan, 2 = human-reviewed, 3 = partner / first-party
    lastReviewedAt?: string;
    reviewedBy?: 'system' | 'human' | 'partner';
  };

  permissions: {
    requiresLogin: boolean;
    usesPayments: boolean;
    usesCamera: boolean;
    usesMicrophone: boolean;
    usesLocation: boolean;
    usesExternalAccounts: boolean;
  };

  safety: {
    ageRating: 'all' | '13+' | '16+' | '18+';
    contentWarnings?: string[];
  };

  metrics: {
    popularityScore: number; // internal ranking
    installs?: number;
    rating?: number; // 0â€“5
  };

  system: {
    featured: boolean;
    deprecated: boolean;
    internalOnly: boolean;
  };

  createdAt: string;
  updatedAt: string;
};


