
'use client';

import React, { useState, useRef, useEffect, useCallback, useMemo, Suspense, useContext } from 'react';
import { 
  Heart, MessageCircle, Share2, Music, Bell, PhoneMissed, Search, X, Zap, Mail, 
  Mic, Send, Bookmark, CreditCard, UserPlus, Flame, Users, Sticker, Newspaper, 
  Radio, ChevronRight, ChevronLeft, Play, Pause, Disc, Repeat, Volume2, Languages, AtSign, Plus,
  ImageIcon, PartyPopper, Sparkles, Video, Camera, Home, Clapperboard, Film, ThumbsUp, Eye, MoreHorizontal, HomeIcon,
  Gamepad2, BarChart3, FileText, PlusCircle, Settings, ArrowRight, Upload, Tv,
  Save, UploadCloud, Folder, Palette, Globe, SkipBack, SkipForward, Layers, Star, Wallet,
  ArrowDown, ArrowUpRight, DollarSign, TrendingUp, Briefcase, Wand2, Clock, Activity, Cpu, Coins, Lock,
  Target, ShieldCheck, Loader2
} from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';
import Link from 'next/link';
import { FamilyDataContext, FamilyDataProvider, useFamilyData } from '@/contexts/FamilyDataContext';
import Image from 'next/image';
import { useSearchParams } from 'next/navigation';
import { useFirebase, useUser } from '@/firebase';
import { saveToVault, type VaultMediaItem } from '@/lib/mediaVault';
import { useToast } from '@/hooks/use-toast';
import { collection, query, orderBy, onSnapshot } from 'firebase/firestore';

// --- UTILITY & HELPER FUNCTIONS ---
const cn = (...classes) => classes.filter(Boolean).join(' ');

// Studio-specific data
const studioApps = [
    { id: 'art', title: 'Art Studio', href: '/shared-app/art-studio', icon: Palette },
    { id: 'video', title: 'Video Creator', href: '/shared-app/video-creator', icon: Video },
    { id: 'audio', title: 'Audio Studio', href: '/shared-app/audio-studio', icon: Music },
    { id: 'live', title: 'Live Studio', href: '/shared-app/live-studio', icon: Radio },
    { id: 'tuner', title: 'MyTuner', href: '/family-shared/my-tuner', icon: Disc },
    { id: 'gamerzoner', title: 'GamerZoner', href: '/shared-app/gamerzoner', icon: Gamepad2 },
    { id: 'word', title: 'Word Processor', href: '/shared-app/word-processor', icon: FileText },
];

const MOCK_DATA = [
  { id: 1, type: 'audio', title: 'Midnight Echoes', author: '@SynthWizard', duration: '4:12', img: 'https://images.unsplash.com/photo-1614613535308-eb5fbd3d2c17?auto=format&fit=crop&w=400&q=80' },
  { id: 2, type: 'cinema', title: 'Neo-Tokyo 2099', author: 'Visual Studio X', duration: '1:45:20', img: 'https://images.unsplash.com/photo-1542281286-9e0a16bb7366?auto=format&fit=crop&w=400&q=80' },
  { id: 3, type: 'live', title: 'Global News Feed', author: 'Reuters Universal', duration: 'LIVE', img: 'https://images.unsplash.com/photo-1504711434969-e33886168f5c?auto=format&fit=crop&w=400&q=80' },
  { id: 4, type: 'audio', title: 'Hyper Drive', author: 'Nexus Community', duration: '3:50', img: 'https://images.unsplash.com/photo-1470225620780-dba8ba36b745?auto=format&fit=crop&w=400&q=80' },
  { id: 5, type: 'cinema', title: 'The Silent Void', author: 'Astral Media', duration: '12:45', img: 'https://images.unsplash.com/photo-1446776811953-b23d57bd21aa?auto=format&fit=crop&w=400&q=80' },
  { id: 6, type: 'audio', title: 'Vapor Memories', author: 'RetroFlow', duration: '5:02', img: 'https://images.unsplash.com/photo-1557683316-973673baf926?auto=format&fit=crop&w=400&q=80' },
];

const AppContent = () => {
    const { firestore, user } = useFirebase();
    const { toast } = useToast();
    const { familyState, isLoaded } = useFamilyData();
    const familyMembers = Object.values(familyState.members);
    const searchParams = useSearchParams();
    const userId = searchParams.get('userId') || 'p1';
    
    const [activeTab, setActiveTab] = useState('forge');
    const [isPlaying, setIsPlaying] = useState(false);
    const [searchQuery, setSearchQuery] = useState('');
    const [activeSignal, setActiveSignal] = useState(null);
    
    // Forge State
    const [songName, setSongName] = useState('');
    const [artistName, setArtistName] = useState('');
    const [description, setDescription] = useState('');
    const [coverImage, setCoverImage] = useState(null);
    const [isGenerating, setIsGenerating] = useState(false);
    const [showAssetSourceModal, setShowAssetSourceModal] = useState(false);
    const [createdAlbums, setCreatedAlbums] = useState([]);

    // Studio Modal State
    const [activeStudio, setActiveStudio] = useState(null);
    const [isSavedModalOpen, setIsSavedModalOpen] = useState(false);
    const [isPublishedModalOpen, setIsPublishedModalOpen] = useState(false);

    const [mediaVaultItems, setMediaVaultItems] = useState<VaultMediaItem[]>([]);

    const activeUser = useMemo(() => {
        if (!isLoaded || !familyMembers || familyMembers.length === 0) return null;
        return familyMembers.find(m => m.id === userId) || familyMembers[0];
    }, [userId, familyMembers, isLoaded]);

    useEffect(() => {
        if (!firestore) return;
        const q = query(collection(firestore, "media_vault"), orderBy("createdAt", "desc"));
        const unsubscribe = onSnapshot(q, (snapshot) => {
            const items = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() } as VaultMediaItem));
            setMediaVaultItems(items);
        });
        return () => unsubscribe();
    }, [firestore]);

    const handleFileUpload = (e) => {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = (f) => {
                setCoverImage(f.target.result as string);
                setShowAssetSourceModal(false);
            };
            reader.readAsDataURL(file);
        }
    };

    const handleCreateAlbum = async () => {
        if (!songName || !artistName || !coverImage) {
            toast({ title: "Missing Information", description: "Please provide a title, artist, and cover image.", variant: "destructive"});
            return;
        }
        if (!user) {
            toast({ title: "Authentication error", description: "User not found.", variant: "destructive" });
            return;
        }
        setIsGenerating(true);

        const newItem: Omit<VaultMediaItem, 'id' | 'createdAt'> = {
            title: songName,
            creatorId: user.uid,
            type: 'audio',
            thumbnailUrl: coverImage,
            description,
            ageGroup: 'adult'
        };

        try {
            await saveToVault(newItem);
            toast({ title: "Album Forged!", description: `${songName} has been saved to the Media Vault.` });
            
            setSongName('');
            setArtistName('');
            setDescription('');
            setCoverImage(null);
        } catch (err) {
            console.error("Failed to save album:", err);
            toast({ title: "Forge Failed", description: (err as Error).message, variant: "destructive" });
        } finally {
            setIsGenerating(false);
        }
    };
  
    const StudioView = () => (
      <div className="p-8 max-w-7xl mx-auto w-full space-y-12">
        <div className="text-center">
          <h2 className="text-5xl font-black italic tracking-tighter uppercase mb-2">Creation Suite</h2>
          <p className="text-zinc-500 font-bold uppercase text-xs tracking-widest">Select a studio to begin your next project</p>
        </div>
        <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
          {studioApps.map(app => (
            <div key={app.id} onClick={() => setActiveStudio(app)} className="group aspect-square bg-zinc-900/50 border border-white/5 rounded-3xl flex flex-col items-center justify-center gap-4 hover:bg-zinc-900 hover:border-cyan-500/50 cursor-pointer transition-all hover:-translate-y-2">
              <div className="p-4 rounded-full bg-black/30 border border-white/5 text-cyan-400 group-hover:scale-110 transition-transform">
                <app.icon size={32} />
              </div>
              <span className="text-xs font-black text-zinc-400 uppercase tracking-widest text-center">{app.title}</span>
            </div>
          ))}
        </div>
        <div className="flex flex-col md:flex-row gap-6">
          <button onClick={() => setIsSavedModalOpen(true)} className="flex-1 p-8 bg-zinc-800/40 border border-white/5 rounded-3xl flex items-center gap-6 hover:bg-zinc-800 transition-all">
            <Folder size={32} className="text-emerald-400" />
            <div>
                <h4 className="text-lg font-black uppercase tracking-tighter text-left">Saved Sandbox Content</h4>
                <p className="text-xs text-zinc-500 font-bold text-left">Access your drafts and unfinished projects</p>
            </div>
          </button>
          <button onClick={() => setIsPublishedModalOpen(true)} className="flex-1 p-8 bg-zinc-800/40 border border-white/5 rounded-3xl flex items-center gap-6 hover:bg-zinc-800 transition-all">
            <UploadCloud size={32} className="text-purple-400" />
            <div>
                <h4 className="text-lg font-black uppercase tracking-tighter text-left">Publish Live Content</h4>
                <p className="text-xs text-zinc-500 font-bold text-left">Finalize and release your content to the public</p>
            </div>
          </button>
        </div>
      </div>
    );

    const ForgeView = () => (
      <div className="max-w-7xl mx-auto w-full p-8">
          <div className="text-center mb-12">
              <h2 className="text-5xl font-black italic tracking-tighter uppercase mb-2">The Creative Forge</h2>
              <p className="text-zinc-500 font-bold uppercase text-xs tracking-widest">Manifest your signal identity</p>
          </div>
          <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
              {/* Left Panel: Album Creator */}
              <div className="bg-zinc-900/50 border border-white/10 p-6 rounded-3xl space-y-4">
                  <h3 className="font-bold text-lg mb-2">Album Creator</h3>
                  <input type="text" placeholder="Title" value={songName} onChange={e => setSongName(e.target.value)} className="w-full bg-zinc-800 border border-white/10 rounded-lg p-3 text-lg font-bold italic" />
                  <input type="text" placeholder="Artist / Creator" value={artistName} onChange={e => setArtistName(e.target.value)} className="w-full bg-zinc-800 border border-white/10 rounded-lg p-3 text-sm" />
                  <textarea placeholder="Description..." value={description} onChange={e => setDescription(e.target.value)} className="w-full h-20 bg-zinc-800 border border-white/10 rounded-lg p-3 text-sm resize-none" />
                  <button onClick={() => setShowAssetSourceModal(true)} className="w-full h-24 border-2 border-dashed border-white/10 rounded-xl flex items-center justify-center text-zinc-500 hover:bg-white/5 hover:text-white transition-colors">
                      {coverImage ? <Image src={coverImage} width={80} height={80} className="w-20 h-20 object-cover rounded-lg" alt="Cover preview"/> : <><UploadCloud size={20} className="mr-2" /> Upload Cover Art</>}
                  </button>
                  <button onClick={handleCreateAlbum} disabled={isGenerating} className="w-full py-3 bg-indigo-600 hover:bg-indigo-500 rounded-lg text-sm font-bold flex items-center justify-center gap-2">
                      {isGenerating ? <Loader2 className="animate-spin" /> : <Sparkles />}
                      Forge Album
                  </button>
              </div>
              {/* Right Panel: Display Created Albums */}
              <div className="bg-zinc-900/50 border border-white/10 p-6 rounded-3xl">
                  <h3 className="font-bold text-lg mb-4">Forged Content</h3>
                  <div className="grid grid-cols-2 gap-4 h-[400px] overflow-y-auto">
                      {mediaVaultItems?.filter(item => item.creatorId === user?.uid).map(album => (
                          <div key={album.id} className="aspect-square bg-zinc-800 rounded-lg overflow-hidden">
                              {album.thumbnailUrl && <Image src={album.thumbnailUrl} alt={album.title} width={200} height={200} className="w-full h-full object-cover" />}
                          </div>
                      ))}
                      {!mediaVaultItems?.some(item => item.creatorId === user?.uid) && <p className="text-zinc-500 text-sm col-span-2 text-center mt-10">Your created albums will appear here.</p>}
                  </div>
              </div>
          </div>
      </div>
    );

    const ExploreView = () => (
      <div className="max-w-7xl mx-auto w-full p-8">
          <div className="text-center mb-12">
              <h2 className="text-5xl font-black italic tracking-tighter uppercase mb-2">Explore Creations</h2>
              <p className="text-zinc-500 font-bold uppercase text-xs tracking-widest">Browse content from the entire Sovereign Universe</p>
          </div>
          <div className="max-w-2xl mx-auto mb-8">
            <input type="search" placeholder="Search..." value={searchQuery} onChange={(e) => setSearchQuery(e.target.value)} className="w-full bg-zinc-800 border border-white/10 rounded-full p-4 text-center" />
          </div>
          <div className="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">
              {mediaVaultItems.filter(item => item.title.toLowerCase().includes(searchQuery.toLowerCase())).map(item => (
                   <div key={item.id} className="aspect-square bg-zinc-800 rounded-lg overflow-hidden relative group">
                        {item.thumbnailUrl && <Image src={item.thumbnailUrl} alt={item.title} width={400} height={400} className="w-full h-full object-cover" />}
                        <div className="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                            <h4 className="text-white font-bold text-center p-4">{item.title}</h4>
                        </div>
                   </div>
              ))}
          </div>
      </div>
    );
    
    if (!isLoaded) {
      return <div className="h-screen w-screen bg-[#020202] text-white flex items-center justify-center">Loading User Profile...</div>;
    }
    
    if (!activeUser) {
      return <div className="h-screen w-screen bg-[#020202] text-white flex items-center justify-center">User not found. Please check the URL.</div>;
    }

    return (
        <div className="min-h-screen bg-[#020202] text-[#fafafa] font-sans selection:bg-cyan-500/50 flex flex-col overflow-hidden">
            <div className="absolute inset-0 z-0 opacity-[0.03] mix-blend-overlay pointer-events-none bg-[url('https://grainy-gradients.vercel.app/noise.svg')]" />
            <header className="h-16 border-b border-white/5 bg-black/40 backdrop-blur-xl px-6 flex items-center justify-between shrink-0 z-50">
                <div className="flex items-center gap-8">
                    <div className="flex items-center gap-2 cursor-pointer" onClick={() => setActiveTab('explore')}>
                        <div className="w-6 h-6 bg-cyan-500 rounded-sm rotate-45 flex items-center justify-center">
                            <div className="w-2 h-2 bg-black -rotate-45" />
                        </div>
                        <h1 className="text-sm font-black tracking-[0.2em] uppercase italic">Nexus.OS</h1>
                    </div>
                    
                    <nav className="hidden md:flex items-center gap-1 bg-white/5 p-1 rounded-lg border border-white/5">
                        <NavBtn active={activeTab === 'explore'} icon={Globe} label="Explore" onClick={() => setActiveTab('explore')} />
                        <NavBtn active={activeTab === 'forge'} icon={Sparkles} label="Forge" onClick={() => setActiveTab('forge')} />
                        <NavBtn active={activeTab === 'studio'} icon={Layers} label="Studio" onClick={() => setActiveTab('studio')} />
                    </nav>
                </div>
                <div className="flex items-center gap-6">
                    <div className="w-8 h-8 rounded-full bg-gradient-to-tr from-cyan-500 to-purple-600 border border-white/20 overflow-hidden">
                        {activeUser && activeUser.imageUrl && <Image src={activeUser.imageUrl} alt={activeUser.name} width={32} height={32} className="w-full h-full object-cover" />}
                    </div>
                </div>
            </header>
            <main className="flex-1 overflow-y-auto custom-scrollbar relative">
                <AnimatePresence mode="wait">
                    {activeTab === 'explore' && <ExploreView />}
                    {activeTab === 'forge' && <ForgeView />}
                    {activeTab === 'studio' && <StudioView />}
                </AnimatePresence>
            </main>
            
            <AnimatePresence>
                {activeStudio && (
                    <div className="fixed inset-0 z-[100] flex items-center justify-center p-4">
                        <motion.div initial={{ opacity: 0 }} animate={{ opacity: 1 }} exit={{ opacity: 0 }} className="absolute inset-0 bg-black/80 backdrop-blur-xl" onClick={() => setActiveStudio(null)} />
                        <motion.div initial={{ scale: 0.9, opacity: 0 }} animate={{ scale: 1, opacity: 1 }} exit={{ scale: 0.9, opacity: 0 }} className="relative w-full h-[90vh] max-w-6xl bg-black border border-cyan-500/30 rounded-3xl shadow-2xl overflow-hidden flex flex-col">
                            <div className="p-4 border-b border-white/10 flex justify-between items-center bg-zinc-900/50">
                                <div className="flex items-center gap-3">
                                   {activeStudio.icon && <activeStudio.icon size={18} className="text-cyan-400" />}
                                   <span className="text-sm font-bold text-white">{activeStudio.title}</span>
                                </div>
                                <button onClick={() => setActiveStudio(null)} className="p-1 rounded-full text-zinc-500 hover:bg-white/10 hover:text-white"><X size={16} /></button>
                            </div>
                            <iframe src={activeStudio.href} className="w-full h-full border-none" title={activeStudio.title} />
                        </motion.div>
                    </div>
                )}
            </AnimatePresence>

            <AnimatePresence>
                {showAssetSourceModal && (
                  <div className="fixed inset-0 z-[200] flex items-center justify-center p-4 bg-black/80 backdrop-blur-lg">
                    <motion.div initial={{ scale: 0.9, opacity: 0 }} animate={{ scale: 1, opacity: 1 }} exit={{ scale: 0.9, opacity: 0 }} className="relative w-full max-w-lg bg-zinc-900 border border-white/10 rounded-3xl p-8 space-y-6">
                      <h3 className="text-xl font-black text-center">Select Asset Source</h3>
                      <div className="grid grid-cols-2 gap-4">
                        <label className="p-8 bg-white/5 rounded-2xl flex flex-col items-center justify-center gap-3 text-center cursor-pointer hover:bg-white/10 border border-white/10">
                          <Upload size={32} />
                          <span className="text-xs font-bold uppercase">Upload New File</span>
                          <input type="file" onChange={handleFileUpload} className="hidden" />
                        </label>
                         <button className="p-8 bg-white/5 rounded-2xl flex flex-col items-center justify-center gap-3 text-center cursor-pointer hover:bg-white/10 border border-white/10">
                          <Folder size={32} />
                          <span className="text-xs font-bold uppercase">From Media Vault</span>
                        </button>
                      </div>
                      <button onClick={() => setShowAssetSourceModal(false)} className="w-full py-3 bg-zinc-700/50 rounded-lg text-sm font-bold mt-4 hover:bg-zinc-700">Cancel</button>
                    </motion.div>
                  </div>
                )}
            </AnimatePresence>
            
            <ContentModal 
                isOpen={isSavedModalOpen} 
                onClose={() => setIsSavedModalOpen(false)} 
                title="Saved Sandbox"
                icon={Folder}
            />
            <ContentModal 
                isOpen={isPublishedModalOpen} 
                onClose={() => setIsPublishedModalOpen(false)} 
                title="Published Content"
                icon={UploadCloud}
                published
            />
            
            <footer className="h-28 bg-[#050505] border-t border-white/10 shrink-0 relative z-[60] flex flex-col justify-end">
                <div className="absolute top-0 left-0 right-0 h-12 flex items-center justify-center gap-[2px] pointer-events-none opacity-40">
                   {Array.from({ length: 120 }).map((_, i) => (
                     <WaveBar key={i} active={isPlaying} />
                   ))}
                </div>

                <div className="relative px-8 pb-4 flex items-center justify-between">
                  <div className="w-1/3 flex items-center gap-4">
                    {activeSignal ? (
                      <>
                        <div className="w-12 h-12 bg-zinc-900 rounded border border-white/10 overflow-hidden relative">
                           <img src={activeSignal.img} className="w-full h-full object-cover" alt="" />
                        </div>
                        <div>
                          <h5 className="font-black text-xs uppercase italic tracking-tighter">{activeSignal.title}</h5>
                          <p className="text-[10px] text-zinc-500 font-bold uppercase">{activeSignal.author}</p>
                        </div>
                      </>
                    ) : (
                      <p className="text-[10px] text-zinc-700 font-black uppercase italic">No Active Signal</p>
                    )}
                  </div>

                  <div className="w-1/3 flex flex-col items-center gap-1">
                    <div className="flex items-center gap-8">
                      <TransportBtn icon={SkipBack} />
                      <button 
                        onClick={() => setIsPlaying(!isPlaying)}
                        className="w-10 h-10 bg-white text-black rounded-full flex items-center justify-center hover:scale-105 active:scale-95 transition-all"
                      >
                        {isPlaying ? <Pause size={20} fill="currentColor" /> : <Play size={20} fill="currentColor" className="ml-1" />}
                      </button>
                      <TransportBtn icon={ChevronRight} />
                    </div>
                  </div>

                  <div className="w-1/3 flex justify-end items-center gap-6">
                     <div className="flex items-center gap-4">
                       <span className="text-[9px] font-black text-zinc-600 uppercase">0:42 / 5:12</span>
                       <div className="w-32 h-1 bg-zinc-800 rounded-full overflow-hidden">
                          <motion.div animate={{ width: isPlaying ? '60%' : '40%' }} className="h-full bg-cyan-500" />
                       </div>
                     </div>
                     <button className="text-zinc-500 hover:text-white"><Layers size={18} /></button>
                  </div>
                </div>
            </footer>
            
            <style>{`.custom-scrollbar::-webkit-scrollbar { display: none; }`}</style>
        </div>
    );
};


// --- SUBCOMPONENTS ---

const ContentModal = ({ isOpen, onClose, title, icon: Icon, published = false }) => {
  const [activeTab, setActiveTab] = useState('art');

  if (!isOpen) return null;

  const renderContent = () => {
    if(activeTab === 'live') {
      return (
        <div className="space-y-4"><h4 className="font-bold text-lg mb-4">{published ? "Past Broadcasts" : "Scheduled Live Events"}</h4><div className="bg-zinc-800/50 p-4 rounded-xl border border-zinc-700"><p className="font-semibold text-white">August 28, 2024 - Live Q&A</p><p className="text-sm text-zinc-400">Duration: 45:12</p><div className="mt-2 flex gap-2"><button className="px-3 py-1 bg-blue-600 text-white text-xs rounded-lg">Watch Replay</button><button className="px-3 py-1 bg-purple-600 text-white text-xs rounded-lg">Get Audio</button></div></div><div className="bg-zinc-800/50 p-4 rounded-xl border border-zinc-700 opacity-60"><p className="font-semibold text-white">September 05, 2024 - Studio Session</p><p className="text-sm text-zinc-400">Scheduled for 8:00 PM EST</p></div></div>
      );
    }
    
    return (
      <div className="grid grid-cols-2 md:grid-cols-3 gap-4">
        {[...Array(6)].map((_, i) => (
          <div key={i} className="group aspect-square bg-zinc-800 rounded-xl flex flex-col items-center justify-center p-2 relative">
            <p className="font-bold text-xs text-zinc-400">{activeTab.slice(0, 1).toUpperCase() + activeTab.slice(1)} Project {i+1}</p>
            <p className="text-[10px] text-zinc-500">{published ? "Published" : "Draft"}</p>
            <div className={`absolute -top-1 -right-1 w-4 h-4 rounded-full border-2 border-black ${published ? 'bg-emerald-500' : 'bg-yellow-500'}`} />
          </div>
        ))}
      </div>
    );
  };

  return (
    <div className="fixed inset-0 z-[100] flex items-center justify-center p-4">
      <motion.div initial={{ opacity: 0 }} animate={{ opacity: 1 }} exit={{ opacity: 0 }} className="absolute inset-0 bg-black/80 backdrop-blur-xl" onClick={onClose} />
      <motion.div initial={{ scale: 0.9, opacity: 0 }} animate={{ scale: 1, opacity: 1 }} exit={{ scale: 0.9, opacity: 0 }} className="relative w-full h-[90vh] max-w-4xl bg-zinc-900 border border-white/10 rounded-3xl shadow-2xl overflow-hidden flex flex-col p-6">
        <div className="flex justify-between items-center mb-6">
          <h3 className="text-2xl font-black text-white flex items-center gap-3"><Icon size={24} className="text-purple-400"/> {title}</h3>
          <button onClick={onClose} className="p-2 rounded-full bg-white/5 hover:bg-white/10"><X size={20} /></button>
        </div>
        <div className="flex gap-2 mb-4 p-1 bg-black/40 rounded-xl border border-white/10 self-start">
          {studioApps.map(app => (
             <button key={app.id} onClick={() => setActiveTab(app.id)} className={`px-4 py-2 text-xs font-bold rounded-lg transition-colors ${activeTab === app.id ? 'bg-white text-black' : 'text-zinc-400 hover:bg-white/10'}`}>{app.title}</button>
          ))}
        </div>
        <div className="flex-1 overflow-y-auto pr-2 custom-scrollbar">
          {renderContent()}
        </div>
      </motion.div>
    </div>
  )
};


const NavBtn = ({ active, icon: Icon, label, onClick }) => (
  <button 
    onClick={onClick}
    className={`flex items-center gap-2 px-4 py-1.5 rounded-md text-[10px] font-black uppercase transition-all ${active ? 'bg-white text-black shadow-lg shadow-white/5' : 'text-zinc-500 hover:text-white'}`}
  >
    <Icon size={14} /> {label}
  </button>
);

const TransportBtn = ({ icon: Icon, onClick }) => (
  <button onClick={onClick} className="text-zinc-500 hover:text-white transition-colors active:scale-90">
    <Icon size={20} fill="none" />
  </button>
);

const WaveBar = ({ active }) => {
  const height = active ? Math.random() * 30 + 5 : 4;
  return (
    <motion.div animate={{ height: `${height}px` }} transition={{ duration: 0.15, repeat: Infinity, repeatType: 'reverse' }} className={`w-1 rounded-full ${active ? 'bg-cyan-500/60' : 'bg-zinc-800'}`} />
  );
};

const AppWithProvider = (props) => (
    <Suspense fallback={<div className="bg-[#050505] text-white flex items-center justify-center h-screen">Loading User Data...</div>}>
        <FamilyDataProvider>
            <AppContent {...props} />
        </FamilyDataProvider>
    </Suspense>
);

export default function App() {
    useEffect(() => {
        const style = document.createElement('style');
        style.innerHTML = `@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap'); body { font-family: 'Inter', sans-serif; background: #020202; color: #fafafa; margin: 0; }`;
        document.head.appendChild(style);
        return () => {
            document.head.removeChild(style);
        };
    }, []);

    return <AppWithProvider />;
}
