'use client';
import {
  createContext,
  useContext,
  useState,
  useEffect,
  type ReactNode,
} from 'react';
import { useRouter, usePathname } from 'next/navigation';

export type Role = 'adult' | 'kid' | 'admin';

interface RoleContextType {
  role: Role | null;
  setRole: (role: Role) => void;
  isLoading: boolean;
}

const RoleContext = createContext<RoleContextType | undefined>(undefined);

export function RoleProvider({ children }: { children: ReactNode }) {
  const [role, setRoleState] = useState<Role | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const router = useRouter();
  const pathname = usePathname();

  useEffect(() => {
    let isMounted = true;
    try {
      const storedRole = localStorage.getItem('family-os-role') as Role;
      if (storedRole) {
        if (isMounted) setRoleState(storedRole);
      } else if (pathname !== '/login') {
        router.push('/login');
      }
    } catch (error) {
      console.error('Could not access local storage.');
      if (pathname !== '/login') {
         router.push('/login');
      }
    } finally {
      if (isMounted) setIsLoading(false);
    }
    return () => { isMounted = false };
  }, [router, pathname]);

  const setRole = (newRole: Role) => {
    setRoleState(newRole);
    try {
      localStorage.setItem('family-os-role', newRole);
    } catch (error) {
      console.error('Could not access local storage.');
    }
  };

  return (
    <RoleContext.Provider value={{ role, setRole, isLoading }}>
      {children}
    </RoleContext.Provider>
  );
}

export function useRole() {
  const context = useContext(RoleContext);
  if (context === undefined) {
    throw new Error('useRole must be used within a RoleProvider');
  }
  return context;
}
