                <h2 className="text-5xl font-black italic tracking-tighter uppercase mb-2">The Creative Forge</h2>
                <p className="text-zinc-500 font-bold uppercase text-xs tracking-widest">Manifest your signal identity</p>
              </div>

              <div className="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <div className="space-y-6">
                  {/* Metadata Form */}
                  <div className="space-y-3">
                    <input type="text" placeholder="Song/Video Title" value={songName} onChange={e => setSongName(e.target.value)} className="w-full bg-zinc-900 border border-white/10 rounded-xl p-3 text-lg font-bold italic" />
                    <input type="text" placeholder="Artist Name" value={artistName} onChange={e => setArtistName(e.target.value)} className="w-full bg-zinc-900 border border-white/10 rounded-xl p-3 text-sm" />
                    <textarea placeholder="Description..." value={description} onChange={e => setDescription(e.target.value)} className="w-full h-24 bg-zinc-900 border border-white/10 rounded-xl p-3 text-sm resize-none" />
                    <select value={contentType} onChange={e => setContentType(e.target.value)} className="w-full bg-zinc-900 border border-white/10 rounded-xl p-3 text-sm">
                      <option value="song">Song</option>
                      <option value="video">Video</option>
                      <option value="broadcast">Broadcast</option>
                      <option value="live-recording">Live Recording</option>
                    </select>
                  </div>
                  
                  {/* Media Link */}
                  <div className="p-4 bg-white/5 border border-dashed border-white/10 rounded-xl flex items-center justify-between">
                    <span className="text-xs font-bold text-zinc-400">Link media from Studio...</span>
                    <button className="px-4 py-2 bg-zinc-700 hover:bg-zinc-600 rounded-lg text-[10px] font-black uppercase tracking-widest">Select File</button>
                  </div>

                  <div className="flex gap-2">
                    <button className="flex-1 py-3 bg-zinc-700 hover:bg-zinc-600 rounded-2xl text-[10px] font-black uppercase tracking-widest">Save to Sandbox</button>
                    <button className="flex-1 py-3 bg-cyan-500 text-black font-black uppercase tracking-widest rounded-2xl hover:bg-cyan-400">Publish</button>
                  </div>
                </div>

                <div 
                  onClick={() => setShowAssetSourceModal(true)}
                  className="relative aspect-[3/4] bg-zinc-900 rounded-3xl border-2 border-dashed border-white/10 overflow-hidden flex items-center justify-center group shadow-2xl cursor-pointer hover:border-cyan-500/50"
                >
                  {coverImage ? (
                    <img src={coverImage} className="w-full h-full object-cover" alt="Cover art preview" />
                  ) : (
                    <div className="text-center space-y-4 opacity-30 group-hover:opacity-60 transition-opacity">
                      <ImageIcon size={64} className="mx-auto" />
                      <p className="font-black uppercase tracking-tighter text-sm italic">SELECT COVER ART</p>
                    </div>
                  )}
                </div>
              </div>
            </motion.div>
          )}

          {view === 'studio' && (
            <motion.div 
              key="studio"
              initial={{ opacity: 0, scale: 0.98 }} animate={{ opacity: 1, scale: 1 }} exit={{ opacity: 0 }}
              className="p-8 max-w-7xl mx-auto w-full space-y-12"
            >
               <div className="text-center">
                  <h2 className="text-5xl font-black italic tracking-tighter uppercase mb-2">Creation Suite</h2>
                  <p className="text-zinc-500 font-bold uppercase text-xs tracking-widest">Select a studio to begin your next project</p>
               </div>
               
               <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
                 {studioApps.map(app => (
                   <div key={app.id} onClick={() => setActiveStudio(app)} className="group aspect-square bg-zinc-900/50 border border-white/5 rounded-3xl flex flex-col items-center justify-center gap-4 hover:bg-zinc-900 hover:border-cyan-500/50 cursor-pointer transition-all hover:-translate-y-2">
                     <div className="p-4 rounded-full bg-black/30 border border-white/5 text-cyan-400 group-hover:scale-110 transition-transform">
