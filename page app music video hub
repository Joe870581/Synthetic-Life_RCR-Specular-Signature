'use client';

import React, { useState, useEffect, useRef, useMemo, useContext } from 'react';
import { 
  Search, Play, Pause, Radio, Tv, Music, 
  Globe, Zap, Filter, Mic2, ExternalLink, 
  ChevronRight, Disc, Layers, Monitor, 
  Smartphone, Share2, Clock, Eye, SkipBack, 
  SkipForward, Plus, Layout, BarChart3, 
  Wallet, Image as ImageIcon, Video, Send, 
  ArrowUpRight, Sparkles, Loader2, ArrowLeft, Palette, X, Save, UploadCloud, Folder, Calendar, History as HistoryIcon, Star, CheckCircle2, Award, Upload
} from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';
import Link from 'next/link';
import { FamilyDataContext } from '@/contexts/FamilyDataContext';
import Image from 'next/image';
import { useParams } from 'next/navigation';


// --- CONSTANTS ---
const appId = typeof __app_id !== 'undefined' ? __app_id : 'nexus-universal';

// Studio-specific data
const studioApps = [
    { id: 'art', title: 'Art Studio', href: '/shared-app/art-studio', icon: Palette },
    { id: 'video', title: 'Video Creator', href: '/shared-app/video-creator', icon: Video },
    { id: 'audio', title: 'Audio Studio', href: '/shared-app/audio-studio', icon: Music },
    { id: 'live', title: 'Live Studio', href: '/shared-app/live-studio', icon: Radio },
    { id: 'tuner', title: 'MyTuner', href: '/family-shared/my-tuner', icon: Disc }
];


const AppContent = () => {
  const { familyMembers } = useContext(FamilyDataContext);
  const params = useParams();
  const userId = params.userId as string;

  const activeUser = useMemo(() => {
    return familyMembers.find(m => m.id === userId) || familyMembers[0];
  }, [userId, familyMembers]);


  const [activeTab, setActiveTab] = useState('studio');
  const [view, setView] = useState('forge'); // browse, studio, forge
  const [isPlaying, setIsPlaying] = useState(false);
  const [searchQuery, setSearchQuery] = useState('');
  const [activeSignal, setActiveSignal] = useState(null);
  
  // Forge State
  const [songName, setSongName] = useState('');
  const [artistName, setArtistName] = useState('');
  const [description, setDescription] = useState('');
  const [contentType, setContentType] = useState('song');
  const [coverImage, setCoverImage] = useState(null);
  const [isGenerating, setIsGenerating] = useState(false);
  const [showAssetSourceModal, setShowAssetSourceModal] = useState(false);

  // Studio Modal State
  const [activeStudio, setActiveStudio] = useState(null);

  // New states for Saved and Published Modals
  const [isSavedModalOpen, setIsSavedModalOpen] = useState(false);
  const [isPublishedModalOpen, setIsPublishedModalOpen] = useState(false);


  // Stats / Wallet
  const [stats] = useState({ viewers: '1.2k', sov: '4,520.50', growth: '+12%' });

  const handleFileUpload = (e) => {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (f) => {
        setCoverImage(f.target.result as string);
        setShowAssetSourceModal(false);
      };
      reader.readAsDataURL(file);
    }
  };

  return (
    <div className="min-h-screen bg-[#020202] text-[#fafafa] font-sans selection:bg-cyan-500/50 flex flex-col overflow-hidden">
      {/* Subtle Background Texture */}
      <div className="absolute inset-0 z-0 opacity-[0.03] mix-blend-overlay pointer-events-none bg-[url('https://grainy-gradients.vercel.app/noise.svg')]" />
      
      {/* TOP HUD */}
      <header className="h-16 border-b border-white/5 bg-black/40 backdrop-blur-xl px-6 flex items-center justify-between shrink-0 z-50">
        <div className="flex items-center gap-8">
          <div className="flex items-center gap-2 cursor-pointer" onClick={() => setView('browse')}>
            <div className="w-6 h-6 bg-cyan-500 rounded-sm rotate-45 flex items-center justify-center">
              <div className="w-2 h-2 bg-black -rotate-45" />
            </div>
            <h1 className="text-sm font-black tracking-[0.2em] uppercase italic">Nexus.OS</h1>
          </div>
          
          <nav className="hidden md:flex items-center gap-1 bg-white/5 p-1 rounded-lg border border-white/5">
            <NavBtn active={view === 'browse'} icon={Globe} label="Explore" onClick={() => setView('browse')} />
            <NavBtn active={view === 'forge'} icon={Sparkles} label="Forge" onClick={() => setView('forge')} />
            <NavBtn active={view === 'studio'} icon={BarChart3} label="Studio" onClick={() => setView('studio')} />
          </nav>
        </div>

        <div className="flex items-center gap-6">
          <div className="flex items-center gap-2">
            <Link href="/adult-app/adults-hub" passHref>
              <button className="w-10 h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10 transition-all" title="Back to Adult Hub">
                <ArrowLeft size={20} />
              </button>
            </Link>
            <Link href="/shared-app/video-posting" passHref>
              <button className="w-10 h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10 transition-all" title="Video Posting">
                <Video size={20} />
              </button>
            </Link>
          </div>

          <div className="flex flex-col items-end">
            <span className="text-[10px] text-zinc-500 font-bold uppercase tracking-widest">Balance</span>
            <span className="text-sm font-black text-cyan-400 flex items-center gap-1">
              {stats.sov} <span className="text-[10px] opacity-70 italic font-medium">SOV</span>
            </span>
          </div>
          <div className="w-8 h-8 rounded-full bg-gradient-to-tr from-cyan-500 to-purple-600 border border-white/20 overflow-hidden">
            {activeUser && activeUser.imageUrl && <Image src={activeUser.imageUrl} alt={activeUser.name} width={32} height={32} className="w-full h-full object-cover" />}
          </div>
        </div>
      </header>

      {/* MAIN VIEWPORT */}
      <main className="flex-1 overflow-y-auto custom-scrollbar relative">
        <AnimatePresence mode="wait">
          {view === 'browse' && (
            <motion.div 
              key="browse"
              initial={{ opacity: 0, y: 10 }} animate={{ opacity: 1, y: 0 }} exit={{ opacity: 0, y: -10 }}
              className="p-8 max-w-7xl mx-auto w-full"
            >
              <div className="flex items-center justify-between mb-10">
                <h2 className="text-4xl font-black italic tracking-tighter uppercase">Universal Spectrum</h2>
                <div className="flex gap-2">
                  {['Audio', 'Cinema', 'Live'].map(t => (
                    <button key={t} className="px-4 py-1.5 rounded-full border border-white/10 text-[10px] font-black uppercase hover:bg-white hover:text-black transition-all">
                      {t}
                    </button>
                  ))}
                </div>
              </div>
              
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {MOCK_DATA.map(item => (
                   <div 
                    key={item.id}
                    onClick={() => { setActiveSignal(item); setIsPlaying(true); }}
                    className="group bg-zinc-900/40 border border-white/5 rounded-2xl p-4 hover:border-cyan-500/40 transition-all cursor-pointer relative overflow-hidden"
                   >
                     <div className="h-40 bg-zinc-800 rounded-xl mb-4 overflow-hidden relative">
                        <img src={item.img} className="w-full h-full object-cover opacity-60 group-hover:scale-110 transition-transform duration-700" alt="" />
                        <div className="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent" />
                        <div className="absolute bottom-3 left-3 flex items-center gap-2">
                          <span className="text-[10px] font-black bg-cyan-500 text-black px-2 py-0.5 rounded uppercase">{item.type}</span>
                        </div>
                     </div>
                     <h3 className="font-black uppercase tracking-tight text-lg italic">{item.title}</h3>
                     <p className="text-xs text-zinc-500 font-bold mb-4">{item.author}</p>
                     <div className="flex items-center justify-between">
                        <span className="text-[10px] font-black text-zinc-400 uppercase">{item.duration}</span>
                        <div className="flex gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                           <div className="w-1 h-3 bg-cyan-400 animate-pulse" />
                           <div className="w-1 h-3 bg-cyan-400 animate-pulse delay-75" />
                           <div className="w-1 h-3 bg-cyan-400 animate-pulse delay-150" />
                        </div>
                     </div>
                   </div>
