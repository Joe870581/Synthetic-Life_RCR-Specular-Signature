// --- SUBCOMPONENTS ---

const AnalyticsCard = () => {
    const [isFlipped, setIsFlipped] = useState(false);
  
    return (
      <div 
        className="group aspect-square relative [perspective:1000px]"
        onMouseEnter={() => setIsFlipped(true)}
        onMouseLeave={() => setIsFlipped(false)}
      >
        <motion.div
          className="relative w-full h-full transition-transform duration-700 [transform-style:preserve-3d]"
          animate={{ rotateY: isFlipped ? 180 : 0 }}
        >
          {/* Front */}
          <div className="absolute inset-0 bg-zinc-900/50 border border-white/5 rounded-3xl flex flex-col items-center justify-center gap-4 transition-all [backface-visibility:hidden]">
            <div className="p-4 rounded-full bg-black/30 border border-white/5 text-yellow-400">
              <Star size={32} />
            </div>
            <span className="text-xs font-black text-zinc-400 uppercase tracking-widest">Analytics</span>
          </div>
  
          {/* Back */}
          <div className="absolute inset-0 bg-yellow-900/10 border border-yellow-500/20 rounded-3xl p-4 flex flex-col [transform:rotateY(180deg)] [backface-visibility:hidden]">
            <h4 className="text-[10px] font-black text-yellow-400 uppercase tracking-widest mb-2">Creator Metrics</h4>
            <div className="space-y-3 text-xs">
                <div className="flex justify-between items-center"><span className="text-zinc-400">Total SOV$ Earned:</span><span className="font-bold text-white">1,240.50</span></div>
                <div className="h-px bg-yellow-500/20" />
                <p className="font-bold text-white">Top Content:</p>
                <div className="flex justify-between"><span className="text-zinc-400">"Solar Winds"</span><span className="text-yellow-400 font-mono">+450 SOV$</span></div>
                <div className="flex justify-between"><span className="text-zinc-400">"Live Set #3"</span><span className="text-yellow-400 font-mono">+280 SOV$</span></div>
            </div>
            <div className="mt-auto text-center">
                <p className="text-[9px] text-zinc-500 font-bold">@creator.os | <span className="text-emerald-400">LIVE</span></p>
            </div>
          </div>
        </motion.div>
      </div>
    );
};

const ContentModal = ({ isOpen, onClose, title, icon: Icon, published = false }) => {
  const [activeTab, setActiveTab] = useState('art');

  if (!isOpen) return null;

  const renderContent = () => {
    if(activeTab === 'live') {
      return (
        <div className="space-y-4">
          <h4 className="font-bold text-lg mb-4">{published ? "Past Broadcasts" : "Scheduled Live Events"}</h4>
          <div className="bg-zinc-800/50 p-4 rounded-xl border border-zinc-700">
             <p className="font-semibold text-white">August 28, 2024 - Live Q&A</p>
             <p className="text-sm text-zinc-400">Duration: 45:12</p>
             <div className="mt-2 flex gap-2">
                <button className="px-3 py-1 bg-blue-600 text-white text-xs rounded-lg">Watch Replay</button>
                <button className="px-3 py-1 bg-purple-600 text-white text-xs rounded-lg">Get Audio</button>
             </div>
          </div>
          <div className="bg-zinc-800/50 p-4 rounded-xl border border-zinc-700 opacity-60">
             <p className="font-semibold text-white">September 05, 2024 - Studio Session</p>
             <p className="text-sm text-zinc-400">Scheduled for 8:00 PM EST</p>
          </div>
        </div>
      );
    }
    
    return (
      <div className="grid grid-cols-2 md:grid-cols-3 gap-4">
        {[...Array(6)].map((_, i) => (
          <div key={i} className="group aspect-square bg-zinc-800 rounded-xl flex flex-col items-center justify-center p-2 relative">
            <p className="font-bold text-xs text-zinc-400">{activeTab.slice(0, 1).toUpperCase() + activeTab.slice(1)} Project {i+1}</p>
            <p className="text-[10px] text-zinc-500">{published ? "Published" : "Draft"}</p>
            <div className={`absolute -top-1 -right-1 w-4 h-4 rounded-full border-2 border-black ${published ? 'bg-emerald-500' : 'bg-yellow-500'}`} />
          </div>
        ))}
      </div>
    );
  };

  return (
    <div className="fixed inset-0 z-[100] flex items-center justify-center p-4">
      <motion.div initial={{ opacity: 0 }} animate={{ opacity: 1 }} exit={{ opacity: 0 }} className="absolute inset-0 bg-black/80 backdrop-blur-xl" onClick={onClose} />
      <motion.div initial={{ scale: 0.9, opacity: 0 }} animate={{ scale: 1, opacity: 1 }} exit={{ scale: 0.9, opacity: 0 }} className="relative w-full h-[90vh] max-w-4xl bg-zinc-900 border border-white/10 rounded-3xl shadow-2xl overflow-hidden flex flex-col p-6">
        <div className="flex justify-between items-center mb-6">
          <h3 className="text-2xl font-black text-white flex items-center gap-3"><Icon size={24} className="text-purple-400"/> {title}</h3>
          <button onClick={onClose} className="p-2 rounded-full bg-white/5 hover:bg-white/10"><X size={20} /></button>
        </div>
        <div className="flex gap-2 mb-4 p-1 bg-black/40 rounded-xl border border-white/10 self-start">
          {studioApps.map(app => (
             <button key={app.id} onClick={() => setActiveTab(app.id)} className={`px-4 py-2 text-xs font-bold rounded-lg transition-colors ${activeTab === app.id ? 'bg-white text-black' : 'text-zinc-400 hover:bg-white/10'}`}>{app.title}</button>
          ))}
        </div>
        <div className="flex-1 overflow-y-auto pr-2 custom-scrollbar">
          {renderContent()}
        </div>
      </motion.div>
    </div>
  )
};


const NavBtn = ({ active, icon: Icon, label, onClick }) => (
  <button 
    onClick={onClick}
    className={`flex items-center gap-2 px-4 py-1.5 rounded-md text-[10px] font-black uppercase transition-all ${active ? 'bg-white text-black shadow-lg shadow-white/5' : 'text-zinc-500 hover:text-white'}`}
  >
    <Icon size={14} /> {label}
  </button>
);

const TransportBtn = ({ icon: Icon, onClick }) => (
  <button onClick={onClick} className="text-zinc-500 hover:text-white transition-colors active:scale-90">
    <Icon size={20} fill="none" />
  </button>
);

const WaveBar = ({ active }) => {
  const height = active ? Math.random() * 30 + 5 : 4;
  return (
    <motion.div 
      animate={{ height: `${height}px` }}
      transition={{ duration: 0.15, repeat: Infinity, repeatType: 'reverse' }}
      className={`w-1 rounded-full ${active ? 'bg-cyan-500/60' : 'bg-zinc-800'}`}
    />
  );
};

