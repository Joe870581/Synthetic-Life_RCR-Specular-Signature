               </div>

               <div className="flex flex-col md:flex-row gap-6">
                 <button onClick={() => setIsSavedModalOpen(true)} className="flex-1 p-8 bg-zinc-800/40 border border-white/5 rounded-3xl flex items-center gap-6 hover:bg-zinc-800 transition-all">
                   <Folder size={32} className="text-emerald-400" />
                   <div>
                      <h4 className="text-lg font-black uppercase tracking-tighter text-left">Saved Sandbox Content</h4>
                      <p className="text-xs text-zinc-500 font-bold text-left">Access your drafts and unfinished projects</p>
                   </div>
                 </button>
                 <button onClick={() => setIsPublishedModalOpen(true)} className="flex-1 p-8 bg-zinc-800/40 border border-white/5 rounded-3xl flex items-center gap-6 hover:bg-zinc-800 transition-all">
                   <UploadCloud size={32} className="text-purple-400" />
                   <div>
                      <h4 className="text-lg font-black uppercase tracking-tighter text-left">Publish Live Content</h4>
                      <p className="text-xs text-zinc-500 font-bold text-left">Finalize and release your content to the public</p>
                   </div>
                 </button>
               </div>
            </motion.div>
          )}
        </AnimatePresence>
      </main>
      
      {/* Studio Modal */}
      <AnimatePresence>
        {activeStudio && (
            <div className="fixed inset-0 z-[100] flex items-center justify-center p-4">
                <motion.div initial={{ opacity: 0 }} animate={{ opacity: 1 }} exit={{ opacity: 0 }} className="absolute inset-0 bg-black/80 backdrop-blur-xl" onClick={() => setActiveStudio(null)} />
                <motion.div initial={{ scale: 0.9, opacity: 0 }} animate={{ scale: 1, opacity: 1 }} exit={{ scale: 0.9, opacity: 0 }} className="relative w-full h-[90vh] max-w-6xl bg-black border border-cyan-500/30 rounded-3xl shadow-2xl overflow-hidden flex flex-col">
                    <div className="p-4 border-b border-white/10 flex justify-between items-center bg-zinc-900/50">
                        <div className="flex items-center gap-3">
                           <activeStudio.icon size={18} className="text-cyan-400" />
                           <span className="text-sm font-bold text-white">{activeStudio.title}</span>
                        </div>
                        <button onClick={() => setActiveStudio(null)} className="p-1 rounded-full text-zinc-500 hover:bg-white/10 hover:text-white"><X size={16} /></button>
                    </div>
                    <iframe src={activeStudio.href} className="w-full h-full border-none" title={activeStudio.title} />
                </motion.div>
            </div>
        )}
      </AnimatePresence>

      {/* Asset Source Modal */}
      <AnimatePresence>
        {showAssetSourceModal && (
          <div className="fixed inset-0 z-[200] flex items-center justify-center p-4 bg-black/80 backdrop-blur-lg">
            <motion.div initial={{ scale: 0.9, opacity: 0 }} animate={{ scale: 1, opacity: 1 }} exit={{ scale: 0.9, opacity: 0 }} className="relative w-full max-w-lg bg-zinc-900 border border-white/10 rounded-3xl p-8 space-y-6">
              <h3 className="text-xl font-black text-center">Select Asset Source</h3>
              <div className="grid grid-cols-2 gap-4">
                <label className="p-8 bg-white/5 rounded-2xl flex flex-col items-center justify-center gap-3 text-center cursor-pointer hover:bg-white/10 border border-white/10">
                  <Upload size={32} />
                  <span className="text-xs font-bold uppercase">Upload New File</span>
                  <input type="file" onChange={handleFileUpload} className="hidden" />
                </label>
                 <button className="p-8 bg-white/5 rounded-2xl flex flex-col items-center justify-center gap-3 text-center cursor-pointer hover:bg-white/10 border border-white/10">
                  <Folder size={32} />
                  <span className="text-xs font-bold uppercase">From Media Vault</span>
                </button>
              </div>
              <button onClick={() => setShowAssetSourceModal(false)} className="w-full py-3 bg-zinc-700/50 rounded-lg text-sm font-bold mt-4 hover:bg-zinc-700">Cancel</button>
            </motion.div>
          </div>
        )}
      </AnimatePresence>

      {/* Saved/Published Modals */}
      <ContentModal 
        isOpen={isSavedModalOpen} 
        onClose={() => setIsSavedModalOpen(false)} 
        title="Saved Sandbox"
        icon={Folder}
      />
      <ContentModal 
        isOpen={isPublishedModalOpen} 
        onClose={() => setIsPublishedModalOpen(false)} 
        title="Published Content"
        icon={UploadCloud}
        published
      />

      {/* FOOTER TRANSPORT & WAVEFORM */}
      <footer className="h-28 bg-[#050505] border-t border-white/10 shrink-0 relative z-[60] flex flex-col justify-end">
        {/* WAVEFORM UX */}
        <div className="absolute top-0 left-0 right-0 h-12 flex items-center justify-center gap-[2px] pointer-events-none opacity-40">
           {Array.from({ length: 120 }).map((_, i) => (
             <WaveBar key={i} active={isPlaying} />
           ))}
        </div>

        <div className="relative px-8 pb-4 flex items-center justify-between">
          <div className="w-1/3 flex items-center gap-4">
            {activeSignal ? (
              <>
                <div className="w-12 h-12 bg-zinc-900 rounded border border-white/10 overflow-hidden relative">
                   <img src={activeSignal.img} className="w-full h-full object-cover" alt="" />
                </div>
                <div>
                  <h5 className="font-black text-xs uppercase italic tracking-tighter">{activeSignal.title}</h5>
                  <p className="text-[10px] text-zinc-500 font-bold uppercase">{activeSignal.author}</p>
                </div>
              </>
            ) : (
              <p className="text-[10px] text-zinc-700 font-black uppercase italic">No Active Signal</p>
            )}
          </div>

          <div className="w-1/3 flex flex-col items-center gap-1">
            <div className="flex items-center gap-8">
              <TransportBtn icon={SkipBack} />
              <button 
                onClick={() => setIsPlaying(!isPlaying)}
                className="w-10 h-10 bg-white text-black rounded-full flex items-center justify-center hover:scale-110 active:scale-95 transition-all"
              >
                {isPlaying ? <Pause size={20} fill="currentColor" /> : <Play size={20} fill="currentColor" className="ml-1" />}
              </button>
              <TransportBtn icon={ChevronRight} />
            </div>
          </div>

          <div className="w-1/3 flex justify-end items-center gap-6">
             <div className="flex items-center gap-4">
               <span className="text-[9px] font-black text-zinc-600 uppercase">3:42 / 5:12</span>
               <div className="w-32 h-1 bg-zinc-800 rounded-full overflow-hidden">
                  <motion.div animate={{ width: isPlaying ? '60%' : '40%' }} className="h-full bg-cyan-500" />
