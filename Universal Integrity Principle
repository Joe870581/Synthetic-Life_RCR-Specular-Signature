function calculateIntegrity(I, R, epsilon = 1e-4) {
  const TF = Math.abs(R) / Math.max(I, 1e-9);
  const integrity = 1 - TF;
  const coherent = TF < epsilon;
  return { I, R, TF, integrity, coherent };
}

