'use client';

import React, { useState } from 'react';
import { Shield, Fingerprint, Loader2, ChevronRight } from 'lucide-react';
import { useRouter } from 'next/navigation';
import { useAuth, initiateAnonymousSignIn } from '@/firebase';


export default function AdminLoginPage() {
  const auth = useAuth();
  const [isLoading, setIsLoading] = useState(false);
  const router = useRouter();

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setIsLoading(true);

    if (!auth) {
        console.error("Firebase Auth not initialized");
        setIsLoading(false);
        // Optionally show an error toast to the user
        return;
    }
    
    try {
        // This is a REAL anonymous sign-in. We now AWAIT its completion.
        await initiateAnonymousSignIn(auth);
        
        // After successful sign-in, onAuthStateChanged in your provider will pick it up.
        // We can then set the role and redirect.
        localStorage.setItem('family-os-role', 'admin');
        
        // The user is now fully authenticated, we can safely redirect.
        router.push('/admin/dashboard/sandbox-audit');

    } catch (error) {
        console.error("Anonymous sign-in failed", error);
        setIsLoading(false);
    }
  };

  return (
    <div className="flex min-h-screen flex-col items-center justify-center p-6 bg-slate-950 text-slate-100 font-mono relative overflow-hidden">
      {/* Background Effects */}
      <div className="absolute inset-0 z-0 opacity-10 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"/>

      <div className="w-full max-w-md z-20">
        <div className="relative">
          <div className="absolute -inset-1 bg-gradient-to-br from-indigo-500 via-purple-500 to-indigo-500 rounded-lg opacity-20 blur"></div>
          
          <div className="relative bg-slate-900/80 border border-slate-800 rounded-2xl p-8 backdrop-blur-xl shadow-2xl">
            <div className="text-center mb-8">
              <div className="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-slate-800 border border-slate-700 mb-6">
                <Shield className="w-10 h-10 text-indigo-400" />
              </div>
              <h1 className="text-4xl font-black tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-slate-200 to-indigo-300 uppercase">
                Admin Access
              </h1>
              <p className="text-[10px] text-slate-500 mt-2 uppercase tracking-[0.3em] font-bold">
                Sovereign System Control
              </p>
            </div>

            <form onSubmit={handleSubmit} className="space-y-6">
               <button
                type="submit"
                disabled={isLoading}
                className="w-full relative overflow-hidden group h-16 bg-indigo-600 hover:bg-indigo-500 transition-all duration-300 rounded-md text-white disabled:opacity-50"
              >
                <span className="relative z-10 flex items-center justify-center gap-3 font-bold uppercase tracking-widest">
                  {isLoading ? (
                    <>
                      <Loader2 className="w-5 h-5 animate-spin" />
                      Authenticating...
                    </>
                  ) : (
                    <>
                      <Fingerprint className="w-5 h-5" />
                      Engage (Anonymous Sign-In)
                      <ChevronRight className="w-4 h-4 group-hover:translate-x-1 transition-transform" />
                    </>
                  )}
                </span>
              </button>
            </form>

            <div className="mt-8 pt-6 border-t border-slate-800 flex justify-center items-center text-[9px] uppercase tracking-widest text-slate-600 font-bold">
              <span>Node: Master Control /// Protocol: Sovereign</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};
